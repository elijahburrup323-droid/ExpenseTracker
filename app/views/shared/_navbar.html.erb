            <%= link_to "Settings", "#", class: "block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700" %>
            <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "block w-full text-left px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%# Mobile nav %>
  <div class="md:hidden border-t border-white/20 px-4 py-2 flex space-x-4 overflow-x-auto">
    <%= link_to spending_categories_path, class: "text-white/90 text-xs font-medium whitespace-nowrap" do %>Categories<% end %>
    <%= link_to spending_types_path, class: "text-white/90 text-xs font-medium whitespace-nowrap" do %>Spending Types<% end %>
    <%= link_to account_types_path, class: "text-white/90 text-xs font-medium whitespace-nowrap" do %>Account Types<% end %>
    <%= link_to accounts_path, class: "text-white/90 text-xs font-medium whitespace-nowrap" do %>Accounts<% end %>
    <%= link_to documentation_path, class: "text-white/90 text-xs font-medium whitespace-nowrap" do %>Documentation<% end %>
  </div>
</nav>
