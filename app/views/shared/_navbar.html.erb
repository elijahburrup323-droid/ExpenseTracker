<nav class="bg-gradient-to-r from-brand-700 via-brand-600 to-brand-500 shadow-lg">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-14">
      <%# Logo %>
      <div class="flex items-center space-x-8">
        <%= link_to dashboard_path, class: "flex items-center space-x-2" do %>
          <svg class="h-7 w-7 text-white" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 3L2 12h3v8h6v-6h2v6h6v-8h3L12 3z"/>
          </svg>
          <span class="text-lg font-bold text-white tracking-tight">BudgetHQ</span>
        <% end %>

        <%# Nav Links %>
        <div class="hidden md:flex items-center space-x-6">
          <%= link_to spending_categories_path, class: "flex items-center space-x-1.5 text-white/90 hover:text-white text-sm font-medium transition" do %>
            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A2 2 0 013 12V7a4 4 0 014-4z"/>
            </svg>
            <span>Categories</span>
          <% end %>

          <%= link_to spending_types_path, class: "flex items-center space-x-1.5 text-white/90 hover:text-white text-sm font-medium transition" do %>
            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
            </svg>
            <span>Spending Types</span>
          <% end %>

          <%= link_to account_types_path, class: "flex items-center space-x-1.5 text-white/90 hover:text-white text-sm font-medium transition" do %>
            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
            </svg>
            <span>Account Types</span>
          <% end %>

          <%= link_to accounts_path, class: "flex items-center space-x-1.5 text-white/90 hover:text-white text-sm font-medium transition" do %>
            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2 7a2 2 0 012-2h16a2 2 0 012 2v10a2 2 0 01-2 2H4a2 2 0 01-2-2V7zm10 3a2 2 0 100 4 2 2 0 000-4zm-6 2h.01M18 12h.01"/>
            </svg>
            <span>Accounts</span>
          <% end %>

          <%= link_to documentation_path, class: "flex items-center space-x-1.5 text-white/90 hover:text-white text-sm font-medium transition" do %>
            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
            </svg>
            <span>Documentation</span>
          <% end %>
        </div>
      </div>

      <%# Right side: date + user menu %>
      <div class="flex items-center space-x-4">
        <div class="hidden sm:flex items-center space-x-1.5 text-white/80 text-sm">
          <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
          <span><%= Date.today.strftime("%b %-d, %Y") %></span>
        </div>

        <div class="relative" data-controller="dropdown">
          <button type="button"
                  class="flex items-center space-x-2 text-white/90 hover:text-white transition"
                  data-action="click->dropdown#toggle">
            <% if current_user.avatar_url.present? %>
              <img src="<%= current_user.avatar_url %>" alt="Avatar" class="h-8 w-8 rounded-full ring-2 ring-white/30">
            <% else %>
              <div class="h-8 w-8 rounded-full bg-white/20 flex items-center justify-center ring-2 ring-white/30">
                <span class="text-white text-sm font-medium">
                  <%= current_user.full_name.first.upcase %>
                </span>
              </div>
            <% end %>
            <svg class="h-4 w-4 text-white/70" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
