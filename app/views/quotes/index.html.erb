<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8"
     data-controller="quotes"
     data-quotes-api-url-value="<%= api_quotes_path %>"
     data-quotes-csrf-token-value="<%= form_authenticity_token %>">

  <%# Page Header (sticky) %>
  <div class="sticky top-14 z-20 bg-gray-50 dark:bg-gray-900 -mx-4 sm:-mx-6 lg:-mx-8 px-4 sm:px-6 lg:px-8 py-4 mb-2 border-b border-gray-200 dark:border-gray-700 shadow-sm">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
    <div>
      <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Quotes</h1>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Manage inspirational quotes displayed on sign-in</p>
    </div>
    <div class="flex items-center space-x-2">
      <%= render "shared/upload_modal",
            entity: "quote",
            api_url: api_quotes_path,
            fields_json: [
              { key: "quote_text", label: "Quote Text", required: true, type: "text" },
              { key: "quote_author", label: "Author", required: false, type: "text", max: 120 },
              { key: "is_active", label: "Active", required: false, type: "boolean" }
            ].to_json,
            lookups_json: {}.to_json,
            csrf_token: form_authenticity_token %>
      <button type="button"
              class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-brand-600 hover:bg-brand-700 transition"
              data-quotes-target="populateButton"
              data-action="click->quotes#populate">
        <svg class="h-4 w-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"/>
        </svg>
        Populate Quotes
      </button>
      <button type="button"
              class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition disabled:opacity-50 disabled:cursor-not-allowed"
              data-quotes-target="addButton"
              data-action="click->quotes#startAdding">
        <svg class="h-4 w-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/>
        </svg>
        Add Quote
      </button>
    </div>
    </div>
  </div>

  <%# Table %>
  <div class="bg-white dark:bg-gray-800 shadow-sm rounded-lg overflow-hidden ring-1 ring-gray-200 dark:ring-gray-700">
    <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
      <thead class="bg-gray-50 dark:bg-gray-800">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider cursor-pointer hover:text-gray-700 dark:hover:text-gray-200 select-none"
              data-sort-key="quote_text" data-action="click->quotes#sort">
            <span class="inline-flex items-center">Quote <span data-quotes-target="sortIcon" data-sort-key="quote_text" class="ml-1"></span></span>
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider w-40 cursor-pointer hover:text-gray-700 dark:hover:text-gray-200 select-none"
              data-sort-key="quote_author" data-action="click->quotes#sort">
            <span class="inline-flex items-center">Author <span data-quotes-target="sortIcon" data-sort-key="quote_author" class="ml-1"></span></span>
          </th>
          <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider w-20 cursor-pointer hover:text-gray-700 dark:hover:text-gray-200 select-none"
              data-sort-key="is_active" data-action="click->quotes#sort">
            <span class="inline-flex items-center justify-center">Active <span data-quotes-target="sortIcon" data-sort-key="is_active" class="ml-1"></span></span>
          </th>
          <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider w-40">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700" data-quotes-target="tableBody">
        <tr>
          <td colspan="4" class="px-6 py-8 text-center text-sm text-gray-400 dark:text-gray-500">Loading...</td>
        </tr>
      </tbody>
    </table>
  </div>

  <%# Info Box %>
  <div class="mt-6 rounded-lg bg-blue-50 dark:bg-blue-900/30 p-4 ring-1 ring-blue-200 dark:ring-blue-800">
    <div class="flex">
      <svg class="h-5 w-5 text-blue-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
      </svg>
      <p class="ml-3 text-sm text-blue-700 dark:text-blue-300">
        Quotes are displayed to users on the sign-in page. Only active quotes will be shown.
        A random active quote is selected each time a user visits the sign-in page.
      </p>
    </div>
  </div>

  <%# Delete Confirmation Modal %>
  <div class="hidden fixed inset-0 z-50" data-quotes-target="deleteModal">
    <div class="fixed inset-0 bg-gray-500/75 dark:bg-gray-900/80 transition-opacity"></div>
    <div class="fixed inset-0 z-50 flex items-center justify-center p-4">
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-md w-full p-6">
        <div class="flex items-start">
          <div class="flex-shrink-0 flex items-center justify-center h-10 w-10 rounded-full bg-red-100 dark:bg-red-900/30">
            <svg class="h-5 w-5 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"/>
            </svg>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-medium text-gray-900 dark:text-white">Delete Quote</h3>
            <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
              Are you sure you want to delete this quote by "<span class="font-medium text-gray-700 dark:text-gray-300" data-quotes-target="deleteModalName"></span>"?
              This action cannot be undone.
            </p>
          </div>
        </div>
        <div class="mt-6 flex justify-end space-x-3">
          <button type="button"
                  class="px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-brand-500 transition"
                  data-action="click->quotes#cancelDelete">
            Cancel
          </button>
          <button type="button"
                  class="px-4 py-2 text-sm font-medium text-white bg-red-600 border border-transparent rounded-lg hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition"
                  data-action="click->quotes#executeDelete">
            Delete
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
