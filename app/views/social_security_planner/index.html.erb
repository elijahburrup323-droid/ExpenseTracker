<div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8" data-controller="ss-planner">

  <%# ===== Purple Gradient Header (sticky) ===== %>
  <div class="sticky top-14 z-20 -mx-4 sm:-mx-6 lg:-mx-8 px-4 sm:px-6 lg:px-8 py-4 mb-6 shadow-sm
              bg-gradient-to-r from-brand-700 to-brand-500">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
      <div>
        <h1 class="text-2xl font-bold text-white">Social Security Benefit Planner</h1>
        <p class="mt-1 text-sm text-white/70">Model retirement, spousal, and survivor claiming strategies under official SSA rules</p>
      </div>
      <div class="flex items-center space-x-3 flex-shrink-0">
        <button type="button"
                data-action="click->ss-planner#scrollToAssumptions"
                class="px-4 py-2 text-sm font-medium text-white/80 hover:text-white border border-white/30 rounded-lg hover:bg-white/10 transition">
          Edit Assumptions
        </button>
        <button type="button"
                data-action="click->ss-planner#recalculate"
                class="px-4 py-2 text-sm font-medium text-brand-700 bg-white hover:bg-gray-100 rounded-lg shadow-sm transition">
          Run Strategy Analysis
        </button>
      </div>
    </div>
  </div>

  <%# ===== Participants Section ===== %>
  <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Participants</h2>
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">

    <%# --- Card: You --- %>
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm ring-1 ring-gray-200 dark:ring-gray-700 p-6">
      <h3 class="text-base font-semibold text-gray-900 dark:text-white mb-4">You</h3>
      <div class="space-y-4">
        <%# Full Name %>
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Full Name</label>
          <input type="text" placeholder="Your name"
                 data-ss-planner-target="yourName"
                 class="w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white text-sm focus:ring-brand-500 focus:border-brand-500">
        </div>
        <%# Sex %>
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Sex</label>
          <select data-ss-planner-target="yourSex" data-action="change->ss-planner#recalculate"
                  class="w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white text-sm focus:ring-brand-500 focus:border-brand-500">
            <option value="male">Male</option>
            <option value="female">Female</option>
          </select>
        </div>
        <%# Birthdate %>
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Birthdate</label>
          <input type="date"
                 data-ss-planner-target="yourBirthdate"
                 data-action="change->ss-planner#recalculate"
                 class="w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white text-sm focus:ring-brand-500 focus:border-brand-500">
        </div>
        <%# Primary Insurance Amount (PIA) %>
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Primary Insurance Amount (PIA) $/mo</label>
          <input type="number" step="1" min="0" placeholder="e.g. 2800"
                 data-ss-planner-target="yourPIA"
                 data-action="change->ss-planner#recalculate"
                 class="w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white text-sm focus:ring-brand-500 focus:border-brand-500">
        </div>
        <%# Currently Drawing? %>
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Currently Drawing Social Security?</label>
          <select data-ss-planner-target="yourCurrentlyDrawing"
                  class="w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white text-sm focus:ring-brand-500 focus:border-brand-500">
            <option value="no">No</option>
            <option value="yes">Yes</option>
          </select>
        </div>
        <%# Planned Claim Age (stacked: years on top, months below) %>
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Planned Claim Age</label>
          <div class="space-y-2">
            <select data-ss-planner-target="yourClaimAgeYears" data-action="change->ss-planner#recalculate"
                    class="w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white text-sm focus:ring-brand-500 focus:border-brand-500">
              <% (62..70).each do |age| %>
                <option value="<%= age %>" <%= "selected" if age == 67 %>><%= age %> years</option>
              <% end %>
            </select>
            <select data-ss-planner-target="yourClaimAgeMonths" data-action="change->ss-planner#recalculate"
                    class="w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white text-sm focus:ring-brand-500 focus:border-brand-500">
              <% (0..11).each do |m| %>
                <option value="<%= m %>"><%= m %> months</option>
              <% end %>
            </select>
          </div>
        </div>
        <%# Full Retirement Age (read-only) %>
        <div>
          <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-1">Full Retirement Age</p>
          <p class="text-sm font-semibold text-gray-900 dark:text-white" data-ss-planner-target="yourFRA">&mdash;</p>
        </div>
        <%# Life Expectancy (read-only) %>
        <div>
          <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-1">Life Expectancy</p>
          <p class="text-sm font-semibold text-gray-900 dark:text-white" data-ss-planner-target="yourLifeExpectancy">&mdash;</p>
          <p class="text-xs text-gray-400 dark:text-gray-500 mt-1">
            Source: <a href="https://www.ssa.gov/oact/STATS/table4c6.html" target="_blank" rel="noopener"
                       class="text-brand-600 dark:text-brand-400 hover:underline">
              https://www.ssa.gov/oact/STATS/table4c6.html
              <svg class="inline-block h-3 w-3 ml-0.5 -mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
              </svg>
            </a>
          </p>
        </div>
      </div>
    </div>

    <%# --- Card: Add Spouse --- %>
    <div data-ss-planner-target="spouseCard"
         class="rounded-lg p-6 border-2 border-dashed border-gray-300 dark:border-gray-600">

      <%# Empty state (shown when no spouse) %>
      <div data-ss-planner-target="spouseEmptyState" class="flex flex-col items-center justify-center h-full min-h-[200px]">
        <svg class="h-12 w-12 text-gray-300 dark:text-gray-600 mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
        <button type="button" data-action="click->ss-planner#toggleSpouse"
                class="inline-flex items-center px-4 py-2 text-sm font-medium text-brand-600 dark:text-brand-400 bg-brand-50 dark:bg-brand-900/30 hover:bg-brand-100 dark:hover:bg-brand-800 rounded-lg transition">
          <svg class="h-4 w-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/>
          </svg>
          Add Spouse
        </button>
        <p class="text-xs text-gray-400 dark:text-gray-500 mt-3 text-center max-w-xs">
          Based on Social Security Administration Period Life Table (2022)<br>
          Source: <a href="https://www.ssa.gov/oact/STATS/table4c6.html" target="_blank" rel="noopener"
                     class="text-brand-600 dark:text-brand-400 hover:underline">https://www.ssa.gov/oact/STATS/table4c6.html</a>
        </p>
      </div>

      <%# Filled state (hidden by default) %>
      <div data-ss-planner-target="spouseSection" class="hidden">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-base font-semibold text-gray-900 dark:text-white">Spouse</h3>
          <button type="button" data-action="click->ss-planner#toggleSpouse"
                  class="text-sm text-red-500 hover:text-red-700 dark:text-red-400 dark:hover:text-red-300 transition">Remove</button>
        </div>
        <div class="space-y-4">
          <%# Full Name %>
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Full Name</label>
            <input type="text" placeholder="Spouse name"
                   data-ss-planner-target="spouseName"
                   class="w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white text-sm focus:ring-brand-500 focus:border-brand-500">
          </div>
          <%# Sex %>
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Sex</label>
            <select data-ss-planner-target="spouseSex" data-action="change->ss-planner#recalculate"
                    class="w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white text-sm focus:ring-brand-500 focus:border-brand-500">
              <option value="female">Female</option>
              <option value="male">Male</option>
            </select>
          </div>
          <%# Birthdate %>
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Birthdate</label>
            <input type="date"
                   data-ss-planner-target="spouseBirthdate"
                   data-action="change->ss-planner#recalculate"
                   class="w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white text-sm focus:ring-brand-500 focus:border-brand-500">
          </div>
          <%# Primary Insurance Amount (PIA) %>
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Primary Insurance Amount (PIA) $/mo</label>
            <input type="number" step="1" min="0" placeholder="e.g. 1800"
                   data-ss-planner-target="spousePIA"
                   data-action="change->ss-planner#recalculate"
                   class="w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white text-sm focus:ring-brand-500 focus:border-brand-500">
          </div>
          <%# Currently Drawing? %>
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Currently Drawing Social Security?</label>
            <select data-ss-planner-target="spouseCurrentlyDrawing"
                    class="w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white text-sm focus:ring-brand-500 focus:border-brand-500">
              <option value="no">No</option>
              <option value="yes">Yes</option>
            </select>
          </div>
          <%# Planned Claim Age (stacked) %>
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Planned Claim Age</label>
            <div class="space-y-2">
              <select data-ss-planner-target="spouseClaimAgeYears" data-action="change->ss-planner#recalculate"
                      class="w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white text-sm focus:ring-brand-500 focus:border-brand-500">
                <% (62..70).each do |age| %>
                  <option value="<%= age %>" <%= "selected" if age == 67 %>><%= age %> years</option>
                <% end %>
              </select>
              <select data-ss-planner-target="spouseClaimAgeMonths" data-action="change->ss-planner#recalculate"
                      class="w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white text-sm focus:ring-brand-500 focus:border-brand-500">
                <% (0..11).each do |m| %>
                  <option value="<%= m %>"><%= m %> months</option>
                <% end %>
              </select>
            </div>
          </div>
          <%# Full Retirement Age (read-only) %>
          <div>
            <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-1">Full Retirement Age</p>
            <p class="text-sm font-semibold text-gray-900 dark:text-white" data-ss-planner-target="spouseFRA">&mdash;</p>
          </div>
          <%# Life Expectancy (read-only) %>
          <div>
            <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-1">Life Expectancy</p>
            <p class="text-sm font-semibold text-gray-900 dark:text-white" data-ss-planner-target="spouseLifeExpectancy">&mdash;</p>
            <p class="text-xs text-gray-400 dark:text-gray-500 mt-1">
              Source: <a href="https://www.ssa.gov/oact/STATS/table4c6.html" target="_blank" rel="noopener"
                         class="text-brand-600 dark:text-brand-400 hover:underline">
                https://www.ssa.gov/oact/STATS/table4c6.html
                <svg class="inline-block h-3 w-3 ml-0.5 -mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                </svg>
              </a>
            </p>
          </div>
        </div>
      </div>
    </div>

  </div><%# end participants grid %>

  <%# ===== Social Security Statement Estimates ===== %>
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm ring-1 ring-gray-200 dark:ring-gray-700 p-6 mb-6">
    <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Social Security Statement Estimates</h2>
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
      <div class="bg-gray-50 dark:bg-gray-700/50 rounded-lg p-4 text-center">
        <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-1">Optimal Claiming Age (You)</p>
        <p class="text-lg font-bold text-gray-900 dark:text-white leading-tight" data-ss-planner-target="yourOptimal">&mdash;</p>
      </div>
      <div class="bg-gray-50 dark:bg-gray-700/50 rounded-lg p-4 text-center">
        <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-1">Optimal Claiming Age (Spouse)</p>
        <p class="text-lg font-bold text-gray-900 dark:text-white leading-tight" data-ss-planner-target="spouseOptimal">&mdash;</p>
      </div>
      <div class="bg-gray-50 dark:bg-gray-700/50 rounded-lg p-4 text-center">
        <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-1">Projected Lifetime Value</p>
        <p class="text-lg font-bold text-green-600 dark:text-green-400" data-ss-planner-target="projectedValue">&mdash;</p>
      </div>
    </div>
  </div>

  <%# ===== Assumptions ===== %>
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm ring-1 ring-gray-200 dark:ring-gray-700 p-6 mb-6"
       data-ss-planner-target="assumptionsSection">
    <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Assumptions</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <div>
        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">COLA</label>
        <select data-ss-planner-target="colaRate"
                data-action="change->ss-planner#recalculate"
                class="w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white text-sm focus:ring-brand-500 focus:border-brand-500">
          <option value="1.0">1.0 %</option>
          <option value="1.5">1.5 %</option>
          <option value="2.0">2.0 %</option>
          <option value="2.5">2.5 %</option>
          <option value="2.6" selected>2.6 %</option>
          <option value="3.0">3.0 %</option>
          <option value="3.5">3.5 %</option>
          <option value="4.0">4.0 %</option>
        </select>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Working Before FRA?</label>
        <select data-ss-planner-target="workingBeforeFRA"
                data-action="change->ss-planner#recalculate"
                class="w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white text-sm focus:ring-brand-500 focus:border-brand-500">
          <option value="no">No</option>
          <option value="yes">Yes</option>
        </select>
      </div>
    </div>
  </div>

  <%# ===== Strategy Summary (Table + Line Chart) ===== %>
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm ring-1 ring-gray-200 dark:ring-gray-700 p-6 mb-6">
    <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Strategy Summary</h2>

    <%# Strategy Table with Sortable Headers %>
    <div class="overflow-x-auto mb-6">
      <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
        <thead class="bg-gray-50 dark:bg-gray-800" data-ss-planner-target="strategyTableHead">
          <tr>
            <th scope="col"
                class="px-4 py-2 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider cursor-pointer hover:text-gray-700 dark:hover:text-gray-200 transition select-none"
                data-sort-field="claimAge" data-action="click->ss-planner#toggleSort">
              <span class="inline-flex items-center space-x-1">
                <span>You Claim Age</span>
                <span data-sort-icon="claimAge" class="text-gray-300 dark:text-gray-600"></span>
              </span>
            </th>
            <th scope="col"
                class="px-4 py-2 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider cursor-pointer hover:text-gray-700 dark:hover:text-gray-200 transition select-none"
                data-sort-field="yourBenefit" data-action="click->ss-planner#toggleSort">
              <span class="inline-flex items-center justify-end space-x-1">
                <span>You</span>
                <span data-sort-icon="yourBenefit" class="text-gray-300 dark:text-gray-600"></span>
              </span>
            </th>
            <th scope="col"
                class="px-4 py-2 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider cursor-pointer hover:text-gray-700 dark:hover:text-gray-200 transition select-none"
                data-sort-field="spouseClaimAge" data-action="click->ss-planner#toggleSort">
              <span class="inline-flex items-center space-x-1">
                <span>Spouse Claiming Age</span>
                <span data-sort-icon="spouseClaimAge" class="text-gray-300 dark:text-gray-600"></span>
              </span>
            </th>
            <th scope="col"
                class="px-4 py-2 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider cursor-pointer hover:text-gray-700 dark:hover:text-gray-200 transition select-none"
                data-sort-field="survivorBenefit" data-action="click->ss-planner#toggleSort">
              <span class="inline-flex items-center justify-end space-x-1">
                <span>Survivor Max Benefit</span>
                <span data-sort-icon="survivorBenefit" class="text-gray-300 dark:text-gray-600"></span>
              </span>
            </th>
            <th scope="col"
                class="px-4 py-2 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider cursor-pointer hover:text-gray-700 dark:hover:text-gray-200 transition select-none"
                data-sort-field="lifetime" data-action="click->ss-planner#toggleSort">
              <span class="inline-flex items-center justify-end space-x-1">
                <span>Lifetime Value</span>
                <span data-sort-icon="lifetime" class="text-gray-300 dark:text-gray-600"></span>
              </span>
            </th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100 dark:divide-gray-700" data-ss-planner-target="strategyTableBody">
          <tr><td colspan="5" class="px-4 py-6 text-center text-sm text-gray-400">Enter your PIA and birthdate to see strategies.</td></tr>
        </tbody>
      </table>
    </div>

    <%# Line Chart %>
    <div data-ss-planner-target="timelineChart" class="w-full">
      <p class="text-sm text-gray-400 dark:text-gray-500 text-center py-8">Enter your details above to see the strategy comparison chart.</p>
    </div>

    <%# Legend %>
    <div data-ss-planner-target="chartLegend" class="hidden flex items-center justify-center space-x-6 mt-4">
      <div class="flex items-center space-x-2">
        <span class="inline-block w-4 h-0.5 bg-blue-500 rounded"></span>
        <span class="text-xs text-gray-500 dark:text-gray-400">Optimal Strategy</span>
      </div>
      <div class="flex items-center space-x-2">
        <span class="inline-block w-4 h-0.5 bg-amber-500 rounded"></span>
        <span class="text-xs text-gray-500 dark:text-gray-400">Early Strategy</span>
      </div>
      <div class="flex items-center space-x-2">
        <span class="inline-block w-4 h-0.5 bg-red-500 rounded"></span>
        <span class="text-xs text-gray-500 dark:text-gray-400">Late Strategy</span>
      </div>
    </div>
  </div>

  <%# ===== Recommendation Summary ===== %>
  <div class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-700 rounded-lg p-6 mb-6"
       data-ss-planner-target="recommendationSection">
    <div class="flex items-start space-x-3">
      <svg class="h-6 w-6 text-blue-500 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <div>
        <h3 class="text-sm font-semibold text-blue-800 dark:text-blue-200 mb-1">Recommendation Summary</h3>
        <p class="text-sm text-blue-700 dark:text-blue-300 leading-relaxed" data-ss-planner-target="recommendationText">
          Enter your details above to receive a personalized recommendation.
        </p>
      </div>
    </div>
  </div>

  <%# ===== Bottom Action Bar (sticky) ===== %>
  <div class="sticky bottom-0 z-20 bg-white dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700 -mx-4 sm:-mx-6 lg:-mx-8 px-4 sm:px-6 lg:px-8 py-3 shadow-lg">
    <div class="flex items-center justify-end space-x-3">
      <button type="button" disabled
              class="px-5 py-2 text-sm font-medium text-gray-400 dark:text-gray-500 bg-gray-100 dark:bg-gray-700 rounded-lg cursor-not-allowed"
              title="Coming soon">
        Export PDF Report
      </button>
      <button type="button"
              data-action="click->ss-planner#resetScenario"
              class="px-5 py-2 text-sm font-medium text-white bg-brand-600 hover:bg-brand-700 rounded-lg shadow-sm transition">
        Compare Another Scenario
      </button>
    </div>
  </div>
</div>
