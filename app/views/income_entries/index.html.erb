<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8"
     data-controller="income-entries"
     data-income-entries-api-url-value="<%= api_income_entries_path %>"
     data-income-entries-accounts-url-value="<%= api_accounts_path %>"
     data-income-entries-frequencies-url-value="<%= api_income_user_frequencies_path %>"
     data-income-entries-recurrings-url-value="<%= api_income_recurrings_path %>"
     data-income-entries-generate-url-value="<%= generate_api_income_entries_path %>"
     data-income-entries-csrf-token-value="<%= form_authenticity_token %>"
     data-income-entries-open-month-url-value="<%= api_open_month_master_path %>">

  <%# Page Header (sticky) %>
  <div class="sticky top-14 z-20 bg-gray-50 dark:bg-gray-900 -mx-4 sm:-mx-6 lg:-mx-8 px-4 sm:px-6 lg:px-8 py-4 mb-2 border-b border-gray-200 dark:border-gray-700 shadow-sm">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
    <div>
      <div class="flex items-baseline space-x-3">
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Deposits</h1>
        <span class="text-lg font-semibold text-gray-700 dark:text-gray-300" data-income-entries-target="total"></span>
      </div>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Track and manage your deposits</p>
    </div>
    <div class="flex items-center space-x-2">
      <%= render "shared/upload_modal",
            entity: "income_entry",
            api_url: api_income_entries_path,
            fields_json: [
              { key: "entry_date", label: "Date", required: true, type: "date" },
              { key: "account", label: "Account", required: true, type: "lookup", lookupKey: "account_id" },
              { key: "source_name", label: "Source", required: true, type: "text", max: 120 },
              { key: "description", label: "Description", required: false, type: "text", max: 255 },
              { key: "amount", label: "Amount", required: true, type: "number" },
              { key: "frequency", label: "Frequency", required: false, type: "lookup", lookupKey: "frequency_master_id" },
              { key: "received_flag", label: "Received", required: false, type: "boolean" }
            ].to_json,
            lookups_json: { account: api_accounts_path, frequency: api_income_user_frequencies_path }.to_json,
            csrf_token: form_authenticity_token %>
      <% if current_user.budgethq_agent? %>
      <button type="button"
              class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-brand-600 hover:bg-brand-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-brand-500 transition disabled:opacity-50 disabled:cursor-not-allowed"
              data-income-entries-target="generateButton"
              data-action="click->income-entries#generateData">
        <svg class="h-4 w-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
        </svg>
        Generate Data
      </button>
      <% end %>
      <button type="button"
              class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition disabled:opacity-50 disabled:cursor-not-allowed"
              data-income-entries-target="addButton"
              data-action="click->income-entries#startAdding">
        <svg class="h-4 w-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/>
        </svg>
        Add Deposit
      </button>
    </div>
    </div>
  </div>

  <%# Table %>
  <div class="bg-white dark:bg-gray-800 shadow-sm rounded-lg overflow-hidden ring-1 ring-gray-200 dark:ring-gray-700">
    <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
      <thead class="bg-gray-50 dark:bg-gray-800">
        <tr>
          <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider cursor-pointer hover:text-gray-700 dark:hover:text-gray-200 select-none" data-action="click->income-entries#sort" data-sort-key="entry_date" data-income-entries-target="sortHeader">Date <span data-sort-arrow></span></th>
          <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider cursor-pointer hover:text-gray-700 dark:hover:text-gray-200 select-none" data-action="click->income-entries#sort" data-sort-key="account_name" data-income-entries-target="sortHeader">Account <span data-sort-arrow></span></th>
          <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider cursor-pointer hover:text-gray-700 dark:hover:text-gray-200 select-none" data-action="click->income-entries#sort" data-sort-key="source_name" data-income-entries-target="sortHeader">Source <span data-sort-arrow></span></th>
          <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider cursor-pointer hover:text-gray-700 dark:hover:text-gray-200 select-none" data-action="click->income-entries#sort" data-sort-key="description" data-income-entries-target="sortHeader">Description <span data-sort-arrow></span></th>
          <th scope="col" class="px-4 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider cursor-pointer hover:text-gray-700 dark:hover:text-gray-200 select-none" data-action="click->income-entries#sort" data-sort-key="amount" data-income-entries-target="sortHeader">Amount <span data-sort-arrow></span></th>
          <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Frequency</th>
          <th scope="col" class="px-4 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider w-20">Received</th>
          <th scope="col" class="px-4 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider w-28">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700" data-income-entries-target="tableBody">
        <tr>
          <td colspan="8" class="px-4 py-8 text-center text-sm text-gray-400 dark:text-gray-500">Loading...</td>
        </tr>
      </tbody>
    </table>
  </div>

  <%# Info Box %>
  <div class="mt-6 rounded-lg bg-blue-50 dark:bg-blue-900/30 p-4 ring-1 ring-blue-200 dark:ring-blue-800">
    <div class="flex">
      <svg class="h-5 w-5 text-blue-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
      </svg>
      <p class="ml-3 text-sm text-blue-700 dark:text-blue-300">
        Deposits are generated automatically from your Recurring Deposits when the next date arrives.
        Toggle "Received" when you've confirmed the deposit. You can also add manual entries.
      </p>
    </div>
  </div>

  <%# Date Warning Modal — date outside open month %>
  <div class="hidden fixed inset-0 z-50" data-income-entries-target="dateWarningModal">
    <div class="fixed inset-0 bg-gray-500/75 dark:bg-gray-900/80 transition-opacity"></div>
    <div class="fixed inset-0 z-50 flex items-center justify-center p-4">
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-md w-full p-6">
        <div class="flex items-start">
          <div class="flex-shrink-0 flex items-center justify-center h-10 w-10 rounded-full bg-yellow-100 dark:bg-yellow-900/30">
            <svg class="h-5 w-5 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"/>
            </svg>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-medium text-gray-900 dark:text-white">Deposit Date Outside Open Month</h3>
            <p class="mt-2 text-sm text-gray-500 dark:text-gray-400" data-income-entries-target="dateWarningMessage"></p>
          </div>
        </div>
        <div class="mt-6 flex justify-end space-x-3">
          <button type="button"
                  class="px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 border border-gray-900 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition"
                  data-action="click->income-entries#cancelDateWarning">Cancel</button>
          <button type="button"
                  class="px-4 py-2 text-sm font-medium text-white bg-brand-600 border border-transparent rounded-lg hover:bg-brand-700 transition"
                  data-action="click->income-entries#proceedDateWarning">Proceed</button>
        </div>
      </div>
    </div>
  </div>

  <%# Delete Blocked Modal — closed month %>
  <div class="hidden fixed inset-0 z-50" data-income-entries-target="deleteBlockedModal">
    <div class="fixed inset-0 bg-gray-500/75 dark:bg-gray-900/80 transition-opacity"></div>
    <div class="fixed inset-0 z-50 flex items-center justify-center p-4">
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-md w-full p-6">
        <div class="flex items-start">
          <div class="flex-shrink-0 flex items-center justify-center h-10 w-10 rounded-full bg-yellow-100 dark:bg-yellow-900/30">
            <svg class="h-5 w-5 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
            </svg>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-medium text-gray-900 dark:text-white">Cannot Delete Deposit</h3>
            <p class="mt-2 text-sm text-gray-500 dark:text-gray-400" data-income-entries-target="deleteBlockedMessage"></p>
          </div>
        </div>
        <div class="mt-6 flex justify-end">
          <button type="button"
                  class="px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 border border-gray-900 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition"
                  data-action="click->income-entries#closeDeleteBlocked">Close</button>
        </div>
      </div>
    </div>
  </div>

  <%# Delete Confirmation Modal %>
  <div class="hidden fixed inset-0 z-50" data-income-entries-target="deleteModal">
    <div class="fixed inset-0 bg-gray-500/75 dark:bg-gray-900/80 transition-opacity"></div>
    <div class="fixed inset-0 z-50 flex items-center justify-center p-4">
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-md w-full p-6">
        <div class="flex items-start">
          <div class="flex-shrink-0 flex items-center justify-center h-10 w-10 rounded-full bg-red-100 dark:bg-red-900/30">
            <svg class="h-5 w-5 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"/>
            </svg>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-medium text-gray-900 dark:text-white">Delete Deposit</h3>
            <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
              Are you sure you want to delete "<span class="font-medium text-gray-700 dark:text-gray-300" data-income-entries-target="deleteModalName"></span>"?
              This action cannot be undone.
            </p>
          </div>
        </div>
        <div class="mt-6 flex justify-end space-x-3">
          <button type="button"
                  class="px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-brand-500 transition"
                  data-action="click->income-entries#cancelDelete">
            Cancel
          </button>
          <button type="button"
                  class="px-4 py-2 text-sm font-medium text-white bg-red-600 border border-transparent rounded-lg hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition"
                  data-action="click->income-entries#executeDelete">
            Delete
          </button>
        </div>
      </div>
    </div>
  </div>

  <%# Add / Edit Deposit Modal %>
  <div class="hidden fixed inset-0 z-50" data-income-entries-target="entryModal">
    <div class="fixed inset-0 bg-gray-500/75 dark:bg-gray-900/80 transition-opacity"></div>
    <div class="fixed inset-0 z-50 flex items-center justify-center p-4">
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-lg w-full p-6">
        <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4" data-income-entries-target="modalTitle">Add Deposit</h3>

        <div class="space-y-4">
          <%# Date %>
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Date <span class="text-red-500">*</span></label>
            <input type="date"
                   class="w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm text-sm focus:border-brand-500 focus:ring-brand-500 px-3 py-2"
                   data-income-entries-target="modalDate"
                   data-action="keydown->income-entries#handleKeydown">
          </div>

          <%# Account %>
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Account</label>
            <select class="w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm text-sm focus:border-brand-500 focus:ring-brand-500 px-3 py-2"
                    data-income-entries-target="modalAccount">
              <option value="">No Account</option>
            </select>
          </div>

          <%# Source Name %>
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Source Name <span class="text-red-500">*</span></label>
            <input type="text" maxlength="80" placeholder="e.g. Paycheck"
                   class="w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm text-sm focus:border-brand-500 focus:ring-brand-500 px-3 py-2"
                   data-income-entries-target="modalSource"
                   data-action="keydown->income-entries#handleKeydown">
          </div>

          <%# Description %>
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Description</label>
            <input type="text" maxlength="255" placeholder="Optional description"
                   class="w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm text-sm focus:border-brand-500 focus:ring-brand-500 px-3 py-2"
                   data-income-entries-target="modalDescription"
                   data-action="keydown->income-entries#handleKeydown">
          </div>

          <%# Amount %>
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Amount</label>
            <div class="relative">
              <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-500 dark:text-gray-400 text-sm">$</span>
              <input type="number" step="0.01" placeholder="0.00"
                     class="w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm text-sm focus:border-brand-500 focus:ring-brand-500 pl-7 pr-3 py-2 text-right"
                     data-income-entries-target="modalAmount"
                     data-action="keydown->income-entries#handleKeydown">
            </div>
          </div>

          <%# Frequency %>
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Frequency</label>
            <select class="w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm text-sm focus:border-brand-500 focus:ring-brand-500 px-3 py-2"
                    data-income-entries-target="modalFrequency">
              <option value="">None</option>
            </select>
          </div>

          <%# Received Toggle %>
          <div class="flex items-center justify-between">
            <label class="text-sm font-medium text-gray-700 dark:text-gray-300">Received</label>
            <div data-income-entries-target="modalReceived"></div>
          </div>

          <%# Error Display %>
          <div class="hidden rounded-md bg-red-50 dark:bg-red-900/30 p-3" data-income-entries-target="modalError">
            <p class="text-sm text-red-600 dark:text-red-400"></p>
          </div>
        </div>

        <%# Footer Buttons %>
        <div class="mt-6 flex justify-end space-x-3">
          <button type="button"
                  class="px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-brand-500 transition"
                  data-action="click->income-entries#cancelModal">
            Cancel
          </button>
          <button type="button"
                  class="px-4 py-2 text-sm font-medium text-white bg-green-600 border border-transparent rounded-lg hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition"
                  data-action="click->income-entries#saveModal">
            Save
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
