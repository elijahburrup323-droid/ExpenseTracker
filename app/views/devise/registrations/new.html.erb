<div class="min-h-screen flex items-center justify-center bg-gray-50 dark:bg-gray-900 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <div class="flex justify-center">
        <svg class="h-12 w-12 text-brand-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <h2 class="mt-4 text-3xl font-extrabold text-gray-900 dark:text-white">Create your account</h2>
      <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">Start tracking your expenses today</p>
    </div>

    <div class="bg-white dark:bg-gray-800 py-8 px-6 shadow-lg rounded-xl border border-gray-200 dark:border-gray-700">
      <!-- Registration Form -->
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="grid grid-cols-2 gap-4">
          <div>
            <%= f.label :first_name, class: "block text-sm font-bold text-gray-700 dark:text-gray-300" %>
            <%= f.text_field :first_name, autocomplete: "given-name",
                class: "mt-1 block w-full px-4 py-3 border border-gray-900 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-lg shadow-sm placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent",
                placeholder: "John" %>
          </div>

          <div>
            <%= f.label :last_name, class: "block text-sm font-bold text-gray-700 dark:text-gray-300" %>
            <%= f.text_field :last_name, autocomplete: "family-name",
                class: "mt-1 block w-full px-4 py-3 border border-gray-900 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-lg shadow-sm placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent",
                placeholder: "Doe" %>
          </div>
        </div>

        <div>
          <%= f.label :email, class: "block text-sm font-bold text-gray-700 dark:text-gray-300" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "mt-1 block w-full px-4 py-3 border border-gray-900 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-lg shadow-sm placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent",
              placeholder: "you@example.com" %>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-bold text-gray-700 dark:text-gray-300" %>
          <%= f.password_field :password, autocomplete: "new-password",
              class: "mt-1 block w-full px-4 py-3 border border-gray-900 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-lg shadow-sm placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent",
              placeholder: "Minimum 8 characters" %>
          <p class="mt-1 text-xs text-gray-500 dark:text-gray-400"><%= @minimum_password_length %> characters minimum</p>
        </div>

        <div>
          <%= f.label :password_confirmation, "Confirm password", class: "block text-sm font-bold text-gray-700 dark:text-gray-300" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
              class: "mt-1 block w-full px-4 py-3 border border-gray-900 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-lg shadow-sm placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent",
              placeholder: "Confirm your password" %>
        </div>

        <div>
          <%= f.submit "Create account",
              class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-brand-600 hover:bg-brand-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-brand-500 transition duration-150 cursor-pointer" %>
        </div>
      <% end %>
    </div>

    <p class="text-center text-sm text-gray-600 dark:text-gray-400">
      Already have an account?
      <%= link_to "Sign in", new_session_path(resource_name), class: "font-medium text-brand-600 dark:text-brand-400 hover:text-brand-500" %>
    </p>
  </div>
</div>
