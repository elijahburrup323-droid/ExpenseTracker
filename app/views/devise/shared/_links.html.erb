<%- if controller_name != 'sessions' %>
  <%= link_to "Sign in", new_session_path(resource_name), class: "font-medium text-brand-600 dark:text-brand-400 hover:text-brand-500" %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Create account", new_registration_path(resource_name), class: "font-medium text-brand-600 dark:text-brand-400 hover:text-brand-500" %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot password?", new_password_path(resource_name), class: "font-medium text-brand-600 dark:text-brand-400 hover:text-brand-500" %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "font-medium text-brand-600 dark:text-brand-400 hover:text-brand-500" %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "font-medium text-brand-600 dark:text-brand-400 hover:text-brand-500" %><br />
<% end %>
