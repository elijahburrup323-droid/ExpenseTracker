<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8"
     data-controller="payments"
     data-payments-api-url-value="<%= api_payments_path %>"
     data-payments-accounts-url-value="<%= api_accounts_path %>"
     data-payments-categories-url-value="<%= api_spending_categories_path %>"
     data-payments-types-url-value="<%= api_spending_types_path %>"
     data-payments-csrf-token-value="<%= form_authenticity_token %>"
     data-payments-accounts-page-url-value="<%= accounts_path %>"
     data-payments-categories-page-url-value="<%= spending_categories_path %>"
     data-payments-types-page-url-value="<%= spending_types_path %>">

  <%# Page Header %>
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Payments</h1>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Track your spending and manage transactions</p>
    </div>
    <button type="button"
            class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition disabled:opacity-50 disabled:cursor-not-allowed"
            data-payments-target="addButton"
            data-action="click->payments#startAdding">
      <svg class="h-4 w-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/>
      </svg>
      Add Payment
    </button>
  </div>

  <%# Filter Bar %>
  <div class="bg-white dark:bg-gray-800 shadow-sm rounded-lg p-4 mb-4 ring-1 ring-gray-200 dark:ring-gray-700">
    <%# Top row: date/dropdown filters + Find/Reset buttons %>
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-7 gap-3 items-end">
      <div class="min-w-0">
        <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">Start Date</label>
        <input type="date" data-payments-target="filterStartDate"
               class="w-full min-w-0 rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm text-sm focus:border-brand-500 focus:ring-brand-500 px-2 py-1.5"
               data-action="change->payments#applyFilters">
      </div>
      <div class="min-w-0">
        <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">End Date</label>
        <input type="date" data-payments-target="filterEndDate"
               class="w-full min-w-0 rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm text-sm focus:border-brand-500 focus:ring-brand-500 px-2 py-1.5"
               data-action="change->payments#applyFilters">
      </div>
      <div class="min-w-0">
        <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">Account</label>
        <select data-payments-target="filterAccount"
                class="w-full min-w-0 rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm text-sm focus:border-brand-500 focus:ring-brand-500 px-3 py-1.5"
                data-action="change->payments#applyFilters">
          <option value="">All Accounts</option>
        </select>
      </div>
      <div class="min-w-0">
        <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">Category</label>
        <select data-payments-target="filterCategory"
                class="w-full min-w-0 rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm text-sm focus:border-brand-500 focus:ring-brand-500 px-3 py-1.5"
                data-action="change->payments#applyFilters">
          <option value="">All Categories</option>
        </select>
      </div>
      <div class="min-w-0">
        <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">Spending Type</label>
        <select data-payments-target="filterType"
                class="w-full min-w-0 rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm text-sm focus:border-brand-500 focus:ring-brand-500 px-3 py-1.5"
                data-action="change->payments#applyFilters">
          <option value="">All Spending Types</option>
        </select>
      </div>
      <div>
        <button type="button"
                class="w-full inline-flex items-center justify-center px-3 py-1.5 border border-transparent text-sm font-medium rounded-md text-white bg-brand-600 hover:bg-brand-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-brand-500 transition"
                data-action="click->payments#applyFilters">
          Find
        </button>
      </div>
      <div>
        <button type="button"
                class="w-full inline-flex items-center justify-center px-3 py-1.5 border border-transparent text-sm font-medium rounded-md text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition"
                data-action="click->payments#resetFilters">
          Reset
        </button>
      </div>
    </div>
    <%# Second row: search description aligned under Account, with Search button under Reset %>
    <div class="mt-3 grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-7 gap-3 items-end">
      <div class="hidden lg:block lg:col-span-2"></div>
      <div class="col-span-2 sm:col-span-2 md:col-span-3 lg:col-span-4">
        <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">Search Descriptions</label>
        <input type="text" placeholder="Type and press Enter to search descriptions..." data-payments-target="filterSearch"
               class="w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm text-sm focus:border-brand-500 focus:ring-brand-500 px-3 py-1.5"
               data-action="keydown->payments#searchKeydown">
      </div>
      <div>
        <button type="button"
                class="w-full inline-flex items-center justify-center px-3 py-1.5 border border-transparent text-sm font-medium rounded-md text-white bg-brand-600 hover:bg-brand-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-brand-500 transition"
                data-action="click->payments#applyFilters">
          Search
        </button>
      </div>
    </div>
  </div>

  <%# Table %>
  <div class="bg-white dark:bg-gray-800 shadow-sm rounded-lg overflow-hidden ring-1 ring-gray-200 dark:ring-gray-700">
    <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
      <thead class="bg-gray-50 dark:bg-gray-800">
        <tr>
          <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Date</th>
          <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Account</th>
          <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Category</th>
          <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Spending Type</th>
          <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Description</th>
          <th scope="col" class="px-4 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Amount</th>
          <th scope="col" class="px-4 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider w-28">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700" data-payments-target="tableBody">
        <tr>
          <td colspan="7" class="px-4 py-8 text-center text-sm text-gray-400 dark:text-gray-500">Loading...</td>
        </tr>
      </tbody>
    </table>
  </div>

  <%# Info Box %>
  <div class="mt-6 rounded-lg bg-blue-50 dark:bg-blue-900/30 p-4 ring-1 ring-blue-200 dark:ring-blue-800">
    <div class="flex">
      <svg class="h-5 w-5 text-blue-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
      </svg>
      <p class="ml-3 text-sm text-blue-700 dark:text-blue-300">
        Payments track your spending transactions. Each payment deducts from the selected account's balance.
        Use the filters above to narrow down by date range, account, category, or type.
      </p>
    </div>
  </div>

  <%# Delete Confirmation Modal %>
  <div class="hidden fixed inset-0 z-50" data-payments-target="deleteModal">
    <div class="fixed inset-0 bg-gray-500/75 dark:bg-gray-900/80 transition-opacity"></div>
    <div class="fixed inset-0 z-50 flex items-center justify-center p-4">
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-md w-full p-6">
        <div class="flex items-start">
          <div class="flex-shrink-0 flex items-center justify-center h-10 w-10 rounded-full bg-red-100 dark:bg-red-900/30">
            <svg class="h-5 w-5 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"/>
            </svg>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-medium text-gray-900 dark:text-white">Delete Payment</h3>
            <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
              Are you sure you want to delete "<span class="font-medium text-gray-700 dark:text-gray-300" data-payments-target="deleteModalName"></span>"?
              The amount will be restored to the account balance. This action cannot be undone.
            </p>
          </div>
        </div>
        <div class="mt-6 flex justify-end space-x-3">
          <button type="button"
                  class="px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-brand-500 transition"
                  data-action="click->payments#cancelDelete">
            Cancel
          </button>
          <button type="button"
                  class="px-4 py-2 text-sm font-medium text-white bg-red-600 border border-transparent rounded-lg hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition"
                  data-action="click->payments#executeDelete">
            Delete
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
