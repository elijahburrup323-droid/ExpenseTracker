<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8"
     data-controller="payments"
     data-payments-api-url-value="<%= api_payments_path %>"
     data-payments-accounts-url-value="<%= api_accounts_path %>"
     data-payments-categories-url-value="<%= api_spending_categories_path %>"
     data-payments-types-url-value="<%= api_spending_types_path %>"
     data-payments-csrf-token-value="<%= form_authenticity_token %>"
     data-payments-open-month-url-value="<%= api_open_month_master_path %>"
     data-payments-accounts-page-url-value="<%= accounts_path %>"
     data-payments-categories-page-url-value="<%= spending_categories_path %>"
     data-payments-types-page-url-value="<%= spending_types_path %>"
     data-payments-suggestions-url-value="<%= suggestions_api_payments_path %>"
>

  <%# Page Header (sticky) %>
  <div class="sticky top-14 z-20 bg-gray-50 dark:bg-gray-900 -mx-4 sm:-mx-6 lg:-mx-8 px-4 sm:px-6 lg:px-8 py-4 mb-2 border-b border-gray-200 dark:border-gray-700 shadow-sm">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
    <div>
      <div class="flex items-baseline space-x-3">
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Payments</h1>
        <span class="text-lg font-semibold text-gray-700 dark:text-gray-300" data-payments-target="total"></span>
      </div>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Track your spending and manage transactions</p>
    </div>
    <div class="flex items-center space-x-2">
      <%= render "shared/upload_modal",
            entity: "payment",
            api_url: api_payments_path,
            fields_json: [
              { key: "payment_date", label: "Date", required: true, type: "date" },
              { key: "account", label: "Account", required: true, type: "lookup", lookupKey: "account_id" },
              { key: "category", label: "Category", required: true, type: "lookup", lookupKey: "spending_category_id" },
              { key: "spending_type", label: "Spending Type", required: false, type: "lookup", lookupKey: "spending_type_override_id" },
              { key: "description", label: "Description", required: false, type: "text", max: 255 },
              { key: "amount", label: "Amount", required: true, type: "number" }
            ].to_json,
            lookups_json: { account: api_accounts_path, category: api_spending_categories_path, spending_type: api_spending_types_path }.to_json,
            csrf_token: form_authenticity_token %>
      <% if current_user.budgethq_agent? %>
      <button type="button"
              class="inline-flex items-center justify-center flex-1 sm:flex-none min-h-[44px] px-4 py-2 border border-gray-900 dark:border-gray-600 text-sm font-medium rounded-lg shadow-sm text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition disabled:opacity-50 disabled:cursor-not-allowed"
              data-payments-target="generateButton"
              data-action="click->payments#generateData">
        <svg class="h-4 w-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m3.75 9v6m3-3H9m1.5-12H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z"/>
        </svg>
        Generate Data
      </button>
      <% end %>
      <button type="button"
              class="inline-flex items-center justify-center flex-1 sm:flex-none min-h-[44px] px-4 py-2 border border-gray-900 dark:border-gray-600 text-sm font-medium rounded-lg shadow-sm text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition disabled:opacity-50 disabled:cursor-not-allowed"
              data-action="click->payments#exportCSV">
        <svg class="h-4 w-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        Export CSV
      </button>
      <button type="button"
              class="inline-flex items-center justify-center flex-1 sm:flex-none min-h-[44px] px-4 py-2 border border-gray-900 dark:border-gray-600 text-sm font-medium rounded-lg shadow-sm text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition disabled:opacity-50 disabled:cursor-not-allowed"
              data-action="click->payments#printView"
              title="Print">
        <svg class="h-4 w-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"/>
        </svg>
        Print
      </button>
      <button type="button"
              class="inline-flex items-center justify-center flex-1 sm:flex-none min-h-[44px] px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition disabled:opacity-50 disabled:cursor-not-allowed"
              data-payments-target="addButton"
              data-action="click->payments#startAdding">
        <svg class="h-4 w-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/>
        </svg>
        Add Payment
      </button>
    </div>
    </div>
  </div>

  <%# Filter Bar — CSS Grid with explicit tablet/desktop breakpoints %>
  <style>
    .payments-filter-grid {
      display: grid;
      gap: 14px;
      grid-template-columns: 1fr;
      align-items: end;
    }
    /* Tablet: 768–1279px — 4-column, 3-row layout */
    @media (min-width: 768px) and (max-width: 1279px) {
      .payments-filter-grid {
        grid-template-columns: 1fr 1fr 1fr auto;
      }
      .pf-start      { grid-column: 1; grid-row: 1; }
      .pf-end        { grid-column: 2; grid-row: 1; }
      .pf-account    { grid-column: 3; grid-row: 1; }
      .pf-reset      { grid-column: 4; grid-row: 1; }
      .pf-category   { grid-column: 1; grid-row: 2; }
      .pf-type       { grid-column: 2; grid-row: 2; max-width: 220px; }
      .pf-search     { grid-column: 1 / span 3; grid-row: 3; }
      .pf-search-btn { grid-column: 4; grid-row: 3; }
    }
    /* Desktop: >1279px — 2-row layout */
    @media (min-width: 1280px) {
      .payments-filter-grid {
        grid-template-columns: auto auto auto auto auto auto;
      }
      .pf-start      { grid-column: 1; grid-row: 1; }
      .pf-end        { grid-column: 2; grid-row: 1; }
      .pf-account    { grid-column: 3; grid-row: 1; }
      .pf-category   { grid-column: 4; grid-row: 1; }
      .pf-type       { grid-column: 5; grid-row: 1; }
      .pf-reset      { grid-column: 6; grid-row: 1; }
      .pf-search     { grid-column: 1 / span 5; grid-row: 2; }
      .pf-search-btn { grid-column: 6; grid-row: 2; }
    }
    /* Modal date input — prevent iPad Safari overflow */
    .modal-date-input {
      width: 100%;
      max-width: 100%;
      min-width: 0;
      box-sizing: border-box;
    }
    .modal-date-input-wrapper {
      min-width: 0;
    }
    @media (max-width: 1024px) {
      .modal-date-input {
        width: 100% !important;
        max-width: 100% !important;
        min-width: 0 !important;
        box-sizing: border-box !important;
      }
      .modal-date-input-wrapper {
        min-width: 0;
        overflow: hidden;
      }
    }
    .payments-filter-grid select {
      text-overflow: ellipsis;
      white-space: nowrap;
      overflow: hidden;
    }
  </style>
  <div class="bg-white dark:bg-gray-800 shadow-sm rounded-lg p-4 mb-4 ring-1 ring-gray-200 dark:ring-gray-700">
    <div class="payments-filter-grid">
      <%# Start Date %>
      <div class="pf-start" style="min-width: 160px;">
        <label class="block text-xs font-bold text-gray-500 dark:text-gray-400 mb-1">Start Date</label>
        <input type="date" data-payments-target="filterStartDate"
               class="w-full h-11 rounded-md border-gray-900 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm text-sm focus:border-brand-500 focus:ring-brand-500 px-3 py-2"
               data-action="change->payments#applyFilters">
      </div>
      <%# End Date %>
      <div class="pf-end" style="min-width: 160px;">
        <label class="block text-xs font-bold text-gray-500 dark:text-gray-400 mb-1">End Date</label>
        <input type="date" data-payments-target="filterEndDate"
               class="w-full h-11 rounded-md border-gray-900 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm text-sm focus:border-brand-500 focus:ring-brand-500 px-3 py-2"
               data-action="change->payments#applyFilters">
      </div>
      <%# Account %>
      <div class="pf-account" style="min-width: 170px;">
        <label class="block text-xs font-bold text-gray-500 dark:text-gray-400 mb-1">Account</label>
        <select data-payments-target="filterAccount"
                class="w-full h-11 rounded-md border-gray-900 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm text-sm focus:border-brand-500 focus:ring-brand-500 px-3 py-2"
                data-action="change->payments#applyFilters">
          <option value="">All Accounts</option>
        </select>
      </div>
      <%# Category %>
      <div class="pf-category" style="min-width: 170px;">
        <label class="block text-xs font-bold text-gray-500 dark:text-gray-400 mb-1">Category</label>
        <select data-payments-target="filterCategory"
                class="w-full h-11 rounded-md border-gray-900 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm text-sm focus:border-brand-500 focus:ring-brand-500 px-3 py-2"
                data-action="change->payments#applyFilters">
          <option value="">All Categories</option>
        </select>
      </div>
      <%# Spending Type %>
      <div class="pf-type" style="min-width: 120px;">
        <label class="block text-xs font-bold text-gray-500 dark:text-gray-400 mb-1">Spending Type</label>
        <select data-payments-target="filterType"
                class="w-full h-11 rounded-md border-gray-900 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm text-sm focus:border-brand-500 focus:ring-brand-500 px-3 py-2"
                data-action="change->payments#applyFilters">
          <option value="">All Spending Types</option>
        </select>
      </div>
      <%# Search Input %>
      <div class="pf-search">
        <div class="relative">
          <input type="text" placeholder="Search descriptions or amounts..." data-payments-target="filterSearch"
                 class="w-full h-11 rounded-md border-gray-900 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm text-sm focus:border-brand-500 focus:ring-brand-500 px-3 py-2 pr-8"
                 title="Use =123.45 or (123.45) to find combinations"
                 data-action="keydown->payments#searchKeydown">
          <button type="button"
                  class="absolute inset-y-0 right-0 flex items-center pr-2 text-gray-400 hover:text-gray-600 dark:hover:text-gray-300"
                  data-action="click->payments#clearSearch"
                  title="Clear search">
            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/></svg>
          </button>
        </div>
      </div>
      <%# Reset Button %>
      <div class="pf-reset flex flex-col justify-end">
        <label class="block text-xs font-bold text-gray-500 dark:text-gray-400 mb-1">&nbsp;</label>
        <button type="button"
                class="inline-flex items-center justify-center w-full h-11 px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition"
                style="min-width: 100px;"
                data-action="click->payments#resetFilters">
          Reset
        </button>
      </div>
      <%# Search Button %>
      <div class="pf-search-btn flex flex-col justify-end">
        <label class="block text-xs font-bold text-gray-500 dark:text-gray-400 mb-1">&nbsp;</label>
        <button type="button"
                class="inline-flex items-center justify-center w-full h-11 px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-brand-600 hover:bg-brand-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-brand-500 transition"
                style="min-width: 100px;"
                data-action="click->payments#applyFilters">
          Search
        </button>
      </div>
    </div>
  </div>

  <%# Table — overflow-x-auto enables horizontal scroll on narrow screens %>
  <div class="bg-white dark:bg-gray-800 shadow-sm rounded-lg overflow-x-auto ring-1 ring-gray-200 dark:ring-gray-700 min-w-0">
    <table class="min-w-[800px] w-full divide-y divide-gray-200 dark:divide-gray-700">
      <thead class="bg-gray-50 dark:bg-gray-800" data-payments-target="tableHead">
        <tr>
          <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider cursor-pointer hover:text-gray-700 dark:hover:text-gray-200 select-none" data-sort-col="payment_date" data-action="click->payments#sortColumn">Date</th>
          <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider cursor-pointer hover:text-gray-700 dark:hover:text-gray-200 select-none" data-sort-col="account" data-action="click->payments#sortColumn">Account</th>
          <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider cursor-pointer hover:text-gray-700 dark:hover:text-gray-200 select-none" data-sort-col="category" data-action="click->payments#sortColumn">Category</th>
          <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider cursor-pointer hover:text-gray-700 dark:hover:text-gray-200 select-none min-w-[12rem]" data-sort-col="type" data-action="click->payments#sortColumn">Spending Type</th>
          <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider cursor-pointer hover:text-gray-700 dark:hover:text-gray-200 select-none" data-sort-col="description" data-action="click->payments#sortColumn">Description</th>
          <th scope="col" class="px-4 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider cursor-pointer hover:text-gray-700 dark:hover:text-gray-200 select-none" data-sort-col="amount" data-action="click->payments#sortColumn">Amount</th>
          <th scope="col" class="px-4 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider w-28">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700" data-payments-target="tableBody">
        <tr>
          <td colspan="7" class="px-4 py-8 text-center text-sm text-gray-400 dark:text-gray-500">Loading...</td>
        </tr>
      </tbody>
    </table>
  </div>

  <%# Filter count indicator %>
  <p class="mt-2 text-xs text-gray-500 dark:text-gray-400" data-payments-target="filterCount"></p>

  <%# Info Box %>
  <div class="mt-6 rounded-lg bg-blue-50 dark:bg-blue-900/30 p-4 ring-1 ring-blue-200 dark:ring-blue-800">
    <div class="flex">
      <svg class="h-5 w-5 text-blue-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
      </svg>
      <p class="ml-3 text-sm text-blue-700 dark:text-blue-300">
        Payments track your spending transactions. Each payment deducts from the selected account's balance.
        Use the filters above to narrow down by date range, account, category, or type.
      </p>
    </div>
  </div>

  <%# Add Payment Modal %>
  <div class="hidden fixed inset-0 z-50" data-payments-target="addModal">
    <div class="fixed inset-0 bg-gray-500/75 transition-opacity" data-action="click->payments#cancelModal"></div>
    <div class="fixed inset-0 z-50 flex items-center justify-center p-4">
      <div class="bg-white rounded-lg shadow-xl max-w-lg w-full">
        <div class="flex items-center justify-between px-6 pt-5 pb-0">
          <h3 class="text-lg font-semibold text-gray-900" data-payments-target="modalTitle">Add Payment</h3>
          <button type="button" class="text-gray-400 hover:text-gray-600 transition" data-action="click->payments#cancelModal" title="Close">
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/></svg>
          </button>
        </div>
        <div class="px-6 py-4 space-y-4" data-payments-target="addModalBody">
          <div class="modal-date-input-wrapper">
            <label class="block text-sm font-medium text-gray-700 mb-1">Date</label>
            <input type="date" name="payment_date" data-payments-target="modalDate"
                   class="modal-date-input w-full rounded-lg border-gray-300 shadow-sm text-sm focus:border-brand-500 focus:ring-brand-500 px-3 py-2.5"
                   data-action="keydown->payments#handleModalKeydown change->payments#onModalDateChange">
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Account <span class="text-red-500">*</span></label>
            <select name="account_id" data-payments-target="modalAccount"
                    class="w-full rounded-lg border-gray-300 shadow-sm text-sm focus:border-brand-500 focus:ring-brand-500 px-3 py-2.5"
                    data-action="keydown->payments#handleModalKeydown change->payments#handleNewDropdown change->payments#onModalAccountChange">
              <option value="">Select account...</option>
              <option value="new">— New Account —</option>
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Category <span class="text-red-500">*</span></label>
            <select name="spending_category_id" data-payments-target="modalCategory"
                    class="w-full rounded-lg border-gray-300 shadow-sm text-sm focus:border-brand-500 focus:ring-brand-500 px-3 py-2.5"
                    data-action="keydown->payments#handleModalKeydown change->payments#handleNewDropdown change->payments#onModalCategoryChange">
              <option value="">Select category...</option>
              <option value="new">— New Category —</option>
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Spending Type</label>
            <select name="spending_type_override_id" data-payments-target="modalType"
                    class="w-full rounded-lg border-gray-300 shadow-sm text-sm focus:border-brand-500 focus:ring-brand-500 px-3 py-2.5"
                    data-action="keydown->payments#handleModalKeydown change->payments#handleNewDropdown">
              <option value="">Auto (from category)</option>
              <option value="new">— New Spending Type —</option>
            </select>
          </div>
          <div class="relative">
            <label class="block text-sm font-medium text-gray-700 mb-1">Description <span class="text-red-500">*</span></label>
            <input type="text" name="description" placeholder="What was this payment for?" maxlength="255" data-payments-target="modalDescription"
                   class="w-full rounded-lg border-gray-300 shadow-sm text-sm focus:border-brand-500 focus:ring-brand-500 px-3 py-2.5"
                   role="combobox" aria-autocomplete="list" aria-expanded="false" aria-controls="payments-suggestions-list"
                   data-action="keydown->payments#handleModalKeydown input->payments#onDescriptionInput">
            <ul id="payments-suggestions-list" role="listbox"
                class="hidden absolute z-50 left-0 right-0 mt-1 max-h-48 overflow-y-auto bg-white border border-gray-300 rounded-lg shadow-lg"
                data-payments-target="suggestionsList"></ul>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Payment Amount <span class="text-red-500">*</span></label>
            <div class="relative">
              <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-500 text-sm">$</span>
              <input type="number" name="amount" placeholder="0.00" step="0.01" data-payments-target="modalAmount"
                     class="w-full rounded-lg border-gray-300 shadow-sm text-sm focus:border-brand-500 focus:ring-brand-500 pl-7 pr-3 py-2.5 text-right"
                     data-action="keydown->payments#handleModalKeydown">
            </div>
          </div>
          <div class="hidden rounded-lg bg-red-50 p-3 text-sm text-red-600" data-payments-target="modalError"></div>
        </div>
        <div class="flex justify-end space-x-3 px-6 pb-5 pt-2">
          <button type="button"
                  class="px-4 py-2.5 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-brand-500 transition"
                  data-action="click->payments#cancelModal">
            Cancel
          </button>
          <button type="button"
                  class="px-4 py-2.5 text-sm font-medium text-white bg-green-600 border border-transparent rounded-lg hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition"
                  data-action="click->payments#saveModal">
            Save
          </button>
        </div>
      </div>
    </div>
  </div>

  <%# Date Warning Modal — payment date outside open month %>
  <div class="hidden fixed inset-0 z-50" data-payments-target="dateWarningModal">
    <div class="fixed inset-0 bg-gray-500/75 dark:bg-gray-900/80 transition-opacity"></div>
    <div class="fixed inset-0 z-50 flex items-center justify-center p-4">
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-md w-full p-6">
        <div class="flex items-start">
