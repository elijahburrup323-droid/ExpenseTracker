<div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8"
     data-controller="accounts"
     data-accounts-api-url-value="<%= api_accounts_path %>"
     data-accounts-types-url-value="<%= api_account_types_path %>"
     data-accounts-csrf-token-value="<%= form_authenticity_token %>"
     data-accounts-types-page-url-value="<%= account_types_path %>"
     data-accounts-deposits-page-url-value="<%= income_entries_path %>"
     data-accounts-payments-page-url-value="<%= payments_path %>">

  <%# Page Header (sticky) %>
  <div class="sticky top-14 z-20 bg-gray-50 dark:bg-gray-900 -mx-4 sm:-mx-6 lg:-mx-8 px-4 sm:px-6 lg:px-8 py-4 mb-2 border-b border-gray-200 dark:border-gray-700 shadow-sm">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
    <div>
      <div class="flex items-baseline space-x-3">
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Accounts</h1>
        <span class="text-sm font-medium text-gray-500 dark:text-gray-400" data-accounts-target="total"></span>
      </div>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Manage the accounts you track to monitor your balances and transactions</p>
    </div>
    <div class="flex items-center space-x-2">
      <% if current_user.budgethq_agent? %>
      <%= render "shared/upload_modal",
            entity: "account",
            api_url: api_accounts_path,
            fields_json: [
              { key: "name", label: "Name", required: true, type: "text", max: 80 },
              { key: "account_type", label: "Account Type", required: true, type: "lookup", lookupKey: "account_type_id" },
              { key: "institution", label: "Institution", required: false, type: "text", max: 80 },
              { key: "balance", label: "Balance", required: true, type: "number" },
              { key: "include_in_budget", label: "In Budget", required: false, type: "boolean" }
            ].to_json,
            lookups_json: { account_type: api_account_types_path }.to_json,
            csrf_token: form_authenticity_token %>
      <button type="button"
              class="inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 text-sm font-medium rounded-lg shadow-sm text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition disabled:opacity-50 disabled:cursor-not-allowed"
              data-accounts-target="generateButton"
              data-action="click->accounts#generateData">
        <svg class="h-4 w-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m3.75 9v6m3-3H9m1.5-12H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z"/>
        </svg>
        Generate Data
      </button>
      <% end %>
      <button type="button"
              class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition disabled:opacity-50 disabled:cursor-not-allowed"
              data-accounts-target="addButton"
              data-action="click->accounts#startAdding">
        <svg class="h-4 w-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/>
        </svg>
        Add Account
      </button>
    </div>
    </div>
  </div>

  <%# Table %>
  <div class="bg-white dark:bg-gray-800 shadow-sm rounded-lg overflow-hidden ring-1 ring-gray-200 dark:ring-gray-700">
    <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
      <thead class="bg-gray-50 dark:bg-gray-800">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider w-10"></th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Name</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Type</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Institution</th>
          <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Balance</th>
          <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">In Budget</th>
          <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider w-28">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700" data-accounts-target="tableBody">
        <tr>
          <td colspan="7" class="px-6 py-8 text-center text-sm text-gray-400 dark:text-gray-500">Loading...</td>
        </tr>
      </tbody>
    </table>
  </div>

  <%# Info Box %>
  <div class="mt-6 rounded-lg bg-blue-50 dark:bg-blue-900/30 p-4 ring-1 ring-blue-200 dark:ring-blue-800">
    <div class="flex">
      <svg class="h-5 w-5 text-blue-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
      </svg>
      <p class="ml-3 text-sm text-blue-700 dark:text-blue-300">
        Accounts represent your real financial accounts (e.g., Checking at Bank of America, Savings at Ally Bank).
        Toggle "In Budget" to include or exclude an account from your budget overview.
      </p>
    </div>
  </div>

  <%# Blocked Delete Modal (deposits/payments exist) %>
  <div class="hidden fixed inset-0 z-50" data-accounts-target="blockedDeleteModal">
    <div class="fixed inset-0 bg-gray-500/75 dark:bg-gray-900/80 transition-opacity"></div>
    <div class="fixed inset-0 z-50 flex items-center justify-center p-4">
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-md w-full p-6">
        <div class="flex items-start">
          <div class="flex-shrink-0 flex items-center justify-center h-10 w-10 rounded-full bg-yellow-100 dark:bg-yellow-900/30">
            <svg class="h-5 w-5 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"/>
            </svg>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-medium text-gray-900 dark:text-white">Can't delete this account</h3>
            <p class="mt-2 text-sm text-gray-500 dark:text-gray-400" data-accounts-target="blockedDeleteBody"></p>
            <p class="mt-3 text-sm text-gray-500 dark:text-gray-400">
              <strong>What you can do:</strong> Move those Deposits/Payments to another account, or delete the related Deposits/Payments first, then try again.
            </p>
          </div>
        </div>
        <div class="mt-6 flex justify-end space-x-3" data-accounts-target="blockedDeleteButtons">
        </div>
      </div>
    </div>
  </div>

  <%# Delete Confirmation Modal %>
  <div class="hidden fixed inset-0 z-50" data-accounts-target="deleteModal">
    <div class="fixed inset-0 bg-gray-500/75 dark:bg-gray-900/80 transition-opacity"></div>
    <div class="fixed inset-0 z-50 flex items-center justify-center p-4">
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-md w-full p-6">
        <div class="flex items-start">
          <div class="flex-shrink-0 flex items-center justify-center h-10 w-10 rounded-full bg-red-100 dark:bg-red-900/30">
            <svg class="h-5 w-5 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"/>
            </svg>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-medium text-gray-900 dark:text-white">Delete Account</h3>
            <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
              Are you sure you want to delete "<span class="font-medium text-gray-700 dark:text-gray-300" data-accounts-target="deleteModalName"></span>"?
              This action cannot be undone.
            </p>
          </div>
        </div>
        <div class="mt-6 flex justify-end space-x-3">
          <button type="button"
                  class="px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-brand-500 transition"
                  data-action="click->accounts#cancelDelete">
            Cancel
          </button>
          <button type="button"
                  class="px-4 py-2 text-sm font-medium text-white bg-red-600 border border-transparent rounded-lg hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition"
                  data-action="click->accounts#executeDelete">
            Delete
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
