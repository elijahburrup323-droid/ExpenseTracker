<div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8"
     data-controller="transfer-masters"
     data-transfer-masters-api-url-value="<%= api_transfer_masters_path %>"
     data-transfer-masters-accounts-url-value="<%= api_accounts_path %>"
     data-transfer-masters-csrf-token-value="<%= form_authenticity_token %>">

  <%# Page Header (sticky) %>
  <div class="sticky top-14 z-20 bg-gray-50 dark:bg-gray-900 -mx-4 sm:-mx-6 lg:-mx-8 px-4 sm:px-6 lg:px-8 py-4 mb-2 border-b border-gray-200 dark:border-gray-700 shadow-sm">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
    <div>
      <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Account Transfers</h1>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Manage the account transfers you've made between accounts</p>
    </div>
    <div class="flex items-center space-x-2">
      <button type="button"
              class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition disabled:opacity-50 disabled:cursor-not-allowed"
              data-transfer-masters-target="addButton"
              data-action="click->transfer-masters#openAddModal">
        <svg class="h-4 w-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/>
        </svg>
        Transfer
      </button>
    </div>
    </div>
  </div>

  <%# Table %>
  <div class="bg-white dark:bg-gray-800 shadow-sm rounded-lg overflow-hidden ring-1 ring-gray-200 dark:ring-gray-700">
    <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
      <thead class="bg-gray-50 dark:bg-gray-800">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Date</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">From</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">To</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Memo</th>
          <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Amount</th>
          <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider w-24">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700" data-transfer-masters-target="tableBody">
        <tr>
          <td colspan="6" class="px-6 py-8 text-center text-sm text-gray-400 dark:text-gray-500">Loading...</td>
        </tr>
      </tbody>
    </table>
  </div>

  <%# Pagination %>
  <div class="mt-3 flex items-center justify-between text-sm text-gray-500 dark:text-gray-400">
    <span data-transfer-masters-target="paginationInfo"></span>
  </div>

  <%# Add/Edit Transfer Modal %>
  <div class="hidden fixed inset-0 z-50" data-transfer-masters-target="modal">
    <div class="fixed inset-0 bg-gray-500/75 transition-opacity" data-action="click->transfer-masters#closeModal"></div>
    <div class="fixed inset-0 z-50 flex items-center justify-center p-4">
      <div class="bg-white rounded-lg shadow-xl max-w-lg w-full">
        <div class="flex items-center justify-between px-6 pt-5 pb-0">
          <h3 class="text-lg font-semibold text-gray-900" data-transfer-masters-target="modalTitle">Transfer Money Between Accounts</h3>
          <button type="button" class="text-gray-400 hover:text-gray-600 transition" data-action="click->transfer-masters#closeModal" title="Close">
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/></svg>
          </button>
        </div>
        <div class="px-6 py-4 space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">From <span class="text-red-500">*</span></label>
            <select data-transfer-masters-target="modalFrom"
                    class="w-full rounded-lg border-gray-300 shadow-sm text-sm focus:border-brand-500 focus:ring-brand-500 px-3 py-2.5"
                    data-action="keydown->transfer-masters#handleModalKeydown">
              <option value="">Select account...</option>
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">To <span class="text-red-500">*</span></label>
            <select data-transfer-masters-target="modalTo"
                    class="w-full rounded-lg border-gray-300 shadow-sm text-sm focus:border-brand-500 focus:ring-brand-500 px-3 py-2.5"
                    data-action="keydown->transfer-masters#handleModalKeydown">
              <option value="">Select account...</option>
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Date <span class="text-red-500">*</span></label>
            <input type="date" data-transfer-masters-target="modalDate"
                   class="w-full rounded-lg border-gray-300 shadow-sm text-sm focus:border-brand-500 focus:ring-brand-500 px-3 py-2.5"
                   data-action="keydown->transfer-masters#handleModalKeydown">
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Amount <span class="text-red-500">*</span></label>
            <div class="relative">
              <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-500 text-sm">$</span>
              <input type="number" placeholder="0.00" step="0.01" data-transfer-masters-target="modalAmount"
                     class="w-full rounded-lg border-gray-300 shadow-sm text-sm focus:border-brand-500 focus:ring-brand-500 pl-7 pr-3 py-2.5 text-right"
                     data-action="keydown->transfer-masters#handleModalKeydown">
            </div>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Memo</label>
            <input type="text" placeholder="Enter memo (optional)" maxlength="255" data-transfer-masters-target="modalMemo"
                   class="w-full rounded-lg border-gray-300 shadow-sm text-sm focus:border-brand-500 focus:ring-brand-500 px-3 py-2.5"
                   data-action="keydown->transfer-masters#handleModalKeydown">
          </div>
          <div class="hidden rounded-lg bg-red-50 p-3 text-sm text-red-600" data-transfer-masters-target="modalError"></div>
        </div>
        <div class="flex justify-end space-x-3 px-6 pb-5 pt-2">
          <button type="button"
                  class="px-4 py-2.5 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-brand-500 transition"
                  data-action="click->transfer-masters#closeModal">
            Cancel
          </button>
          <button type="button"
                  class="px-4 py-2.5 text-sm font-medium text-white bg-green-600 border border-transparent rounded-lg hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition"
                  data-transfer-masters-target="modalSaveButton"
                  data-action="click->transfer-masters#saveTransfer">
            Transfer
          </button>
        </div>
      </div>
    </div>
  </div>

  <%# Delete Confirmation Modal %>
  <div class="hidden fixed inset-0 z-50" data-transfer-masters-target="deleteModal">
    <div class="fixed inset-0 bg-gray-500/75 dark:bg-gray-900/80 transition-opacity"></div>
    <div class="fixed inset-0 z-50 flex items-center justify-center p-4">
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-md w-full p-6">
        <div class="flex items-start">
          <div class="flex-shrink-0 flex items-center justify-center h-10 w-10 rounded-full bg-red-100 dark:bg-red-900/30">
            <svg class="h-5 w-5 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"/>
            </svg>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-medium text-gray-900 dark:text-white">Delete Transfer</h3>
            <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
              Are you sure you want to delete this transfer? This action cannot be undone.
            </p>
          </div>
        </div>
        <div class="flex justify-end space-x-3 mt-6">
          <button type="button"
                  class="px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600 transition"
                  data-action="click->transfer-masters#cancelDelete">
            Cancel
          </button>
          <button type="button"
                  class="px-4 py-2 text-sm font-medium text-white bg-red-600 border border-transparent rounded-lg hover:bg-red-700 transition"
                  data-action="click->transfer-masters#executeDelete">
            Delete
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
