<%# ===== WELCOME BANNER ===== %>
<div class="bg-gradient-to-r from-brand-700 via-brand-600 to-brand-400 -mt-px">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl font-bold text-white">Hello <%= current_user.first_name || current_user.full_name %></h1>
    <p class="text-brand-100 mt-1">Let's start tracking your money and hitting your goals!</p>
    <div class="mt-4">
      <%= link_to "#", class: "inline-flex items-center px-5 py-2 bg-emerald-500 hover:bg-emerald-600 text-white text-sm font-semibold rounded-full shadow transition" do %>
        View Budget
      <% end %>
    </div>
  </div>
</div>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">

  <%# ===== 6-CARD GRID (3 x 2, equal size) ===== %>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">

    <%# ===== CARD 1: Budget Overview ===== %>
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6 flex flex-col">
      <h2 class="text-sm font-semibold text-gray-800 dark:text-gray-200 mb-4">Budget Overview</h2>
      <div class="flex items-center space-x-4 flex-1">
        <%# Donut chart SVG %>
        <% budget_val = @budget_total.to_f %>
        <% plan_val = 6300.0 %>
        <% spent_val = [plan_val - budget_val, 0].max %>
        <% spent_pct = plan_val > 0 ? ((spent_val / plan_val) * 100).clamp(0, 100) : 0 %>
        <% remaining_pct = 100 - spent_pct %>
        <div class="relative w-28 h-28 flex-shrink-0">
          <svg viewBox="0 0 36 36" class="w-full h-full">
            <circle cx="18" cy="18" r="15.9155" fill="none" stroke="#e5e7eb" stroke-width="3" class="dark:opacity-30"/>
            <circle cx="18" cy="18" r="15.9155" fill="none" stroke="#a855f7" stroke-width="3"
                    stroke-dasharray="<%= spent_pct %> <%= remaining_pct %>" stroke-dashoffset="25" stroke-linecap="round"/>
            <circle cx="18" cy="18" r="15.9155" fill="none" stroke="#22c55e" stroke-width="3"
                    stroke-dasharray="<%= remaining_pct %> <%= spent_pct %>" stroke-dashoffset="<%= 25 + spent_pct %>" stroke-linecap="round"/>
          </svg>
          <div class="absolute inset-0 flex flex-col items-center justify-center">
            <span class="text-xl font-bold text-gray-900 dark:text-white"><%= number_to_currency(budget_val, precision: 0) %></span>
            <span class="text-xs text-gray-500 dark:text-gray-400">left</span>
          </div>
        </div>
        <div>
          <p class="text-sm text-gray-600 dark:text-gray-400"><span class="font-semibold text-gray-800 dark:text-gray-200"><%= number_to_currency(spent_val, precision: 0) %></span> spent</p>
          <p class="text-sm text-gray-500 dark:text-gray-400">of <%= number_to_currency(plan_val, precision: 0) %> plan</p>
          <a href="#" class="text-xs text-brand-600 dark:text-brand-400 hover:text-brand-700 dark:hover:text-brand-300 font-medium mt-2 inline-block">View Details &rsaquo;</a>
        </div>
      </div>
    </div>

    <%# ===== CARD 2: Accounts ===== %>
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6 flex flex-col">
      <h2 class="text-sm font-semibold text-gray-800 dark:text-gray-200 mb-4">Accounts</h2>
      <ul class="space-y-3 flex-1">
        <% color_cycle = %w[blue green purple amber sky red] %>
        <% @accounts.each_with_index do |account, i| %>
          <% c = color_cycle[i % color_cycle.length] %>
          <li class="flex items-center justify-between">
            <div class="flex items-center space-x-2">
              <span class="w-7 h-7 rounded-lg bg-<%= c %>-100 dark:bg-<%= c %>-900/30 flex items-center justify-center">
                <svg class="w-4 h-4 text-<%= c %>-600 dark:text-<%= c %>-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
                </svg>
              </span>
              <span class="text-sm text-gray-700 dark:text-gray-300"><%= account.name %></span>
            </div>
            <span class="text-sm font-semibold text-gray-900 dark:text-white"><%= number_to_currency(account.balance) %></span>
          </li>
        <% end %>
        <% if @accounts.empty? %>
          <li class="text-sm text-gray-400 dark:text-gray-500">No accounts yet.</li>
        <% end %>
      </ul>
      <div class="mt-4 pt-3 border-t border-gray-100 dark:border-gray-700">
        <%= link_to accounts_path, class: "text-xs text-brand-600 dark:text-brand-400 hover:text-brand-700 dark:hover:text-brand-300 font-medium" do %>
          Manage Accounts &rsaquo;
        <% end %>
      </div>
    </div>

    <%# ===== CARD 3: Net Worth ===== %>
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6 flex flex-col">
      <h2 class="text-sm font-semibold text-gray-800 dark:text-gray-200 mb-1">Net Worth</h2>
      <div class="flex items-baseline space-x-2 mb-3">
        <span class="text-2xl font-bold text-gray-900 dark:text-white"><%= number_to_currency(@net_worth) %></span>
        <% if @net_worth_change >= 0 %>
          <span class="text-xs font-medium text-emerald-600 dark:text-emerald-400 bg-emerald-50 dark:bg-emerald-900/30 px-1.5 py-0.5 rounded">
            +<%= number_to_currency(@net_worth_change) %> (<%= @net_worth_pct %>%)
          </span>
        <% else %>
          <span class="text-xs font-medium text-red-600 dark:text-red-400 bg-red-50 dark:bg-red-900/30 px-1.5 py-0.5 rounded">
            <%= number_to_currency(@net_worth_change) %> (<%= @net_worth_pct %>%)
          </span>
        <% end %>
      </div>
      <%# Mini line chart SVG %>
      <div class="w-full h-20 flex-1">
        <svg viewBox="0 0 200 60" class="w-full h-full" preserveAspectRatio="none">
          <defs>
            <linearGradient id="netWorthGrad" x1="0" y1="0" x2="0" y2="1">
              <stop offset="0%" stop-color="#a855f7" stop-opacity="0.3"/>
              <stop offset="100%" stop-color="#a855f7" stop-opacity="0"/>
            </linearGradient>
          </defs>
          <path d="M0,45 L33,42 L66,38 L100,35 L133,25 L166,18 L200,12 L200,60 L0,60 Z"
                fill="url(#netWorthGrad)"/>
          <polyline points="0,45 33,42 66,38 100,35 133,25 166,18 200,12"
                    fill="none" stroke="#a855f7" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          <circle cx="200" cy="12" r="3" fill="#a855f7"/>
        </svg>
      </div>
      <div class="flex justify-between text-[10px] text-gray-400 dark:text-gray-500 mt-1">
        <% 5.times do |i| %>
          <% d = (Date.today - (4 - i).months) %>
          <span><%= d.strftime("%b %Y") %></span>
        <% end %>
      </div>
    </div>

    <%# ===== CARD 4: Income & Spending ===== %>
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6 flex flex-col">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-sm font-semibold text-gray-800 dark:text-gray-200">Income & Spending</h2>
        <span class="text-xs text-gray-500 dark:text-gray-400"><%= Date.today.strftime("%B %Y") %></span>
      </div>
      <div class="space-y-3 flex-1">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-2">
            <span class="w-6 h-6 rounded bg-emerald-100 dark:bg-emerald-900/30 flex items-center justify-center">
              <span class="text-emerald-600 dark:text-emerald-400 text-xs font-bold">$</span>
            </span>
            <span class="text-sm text-gray-700 dark:text-gray-300">Beginning Balance</span>
          </div>
          <span class="text-sm font-semibold text-gray-900 dark:text-white"><%= number_to_currency(@beginning_balance_total) %></span>
        </div>
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-2">
            <span class="w-6 h-6 rounded bg-red-100 dark:bg-red-900/30 flex items-center justify-center">
              <svg class="w-3.5 h-3.5 text-red-600 dark:text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
              </svg>
            </span>
            <span class="text-sm text-gray-700 dark:text-gray-300">Expenses</span>
          </div>
          <span class="text-sm font-semibold text-red-600 dark:text-red-400"><%= number_to_currency(@current_month_payments) %></span>
        </div>
        <div class="flex items-center justify-between pt-2 border-t border-gray-100 dark:border-gray-700">
          <span class="text-sm font-semibold text-gray-800 dark:text-gray-200">Current Balance</span>
          <span class="text-sm font-bold text-gray-900 dark:text-white"><%= number_to_currency(@net_worth) %></span>
        </div>
      </div>
      <div class="mt-4 pt-3 border-t border-gray-100 dark:border-gray-700 flex items-center justify-between">
        <%= link_to payments_path, class: "text-xs text-brand-600 dark:text-brand-400 hover:text-brand-700 dark:hover:text-brand-300 font-medium" do %>
          Manage Payments &rsaquo;
        <% end %>
        <%= link_to "#", class: "text-xs text-brand-600 dark:text-brand-400 hover:text-brand-700 dark:hover:text-brand-300 font-medium" do %>
          Manage Income &rsaquo;
        <% end %>
      </div>
    </div>

    <%# ===== CARD 5: Recent Activity ===== %>
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6 flex flex-col">
      <h2 class="text-sm font-semibold text-gray-800 dark:text-gray-200 mb-4">Recent Activity</h2>
      <ul class="space-y-3 flex-1">
        <% activity_colors = %w[blue green purple amber sky] %>
        <% @recent_payments.each_with_index do |payment, i| %>
          <% c = activity_colors[i % activity_colors.length] %>
          <li class="flex items-center justify-between">
            <div class="flex items-center space-x-2">
              <span class="w-7 h-7 rounded-lg bg-<%= c %>-100 dark:bg-<%= c %>-900/30 flex items-center justify-center">
                <svg class="w-4 h-4 text-<%= c %>-500 dark:text-<%= c %>-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17 9V7a5 5 0 00-10 0v2M12 12v3m-3-3h6m-9 7h12a2 2 0 002-2v-4a2 2 0 00-2-2H6a2 2 0 00-2 2v4a2 2 0 002 2z"/>
                </svg>
              </span>
              <span class="text-sm text-gray-700 dark:text-gray-300"><span class="text-gray-400 dark:text-gray-500"><%= payment.payment_date.strftime("%-m/%-d") %></span> <%= payment.description %></span>
            </div>
            <span class="text-sm font-semibold text-gray-900 dark:text-white"><%= number_to_currency(payment.amount) %></span>
          </li>
        <% end %>
        <% if @recent_payments.empty? %>
          <li class="text-sm text-gray-400 dark:text-gray-500">No recent payments.</li>
        <% end %>
      </ul>
      <div class="mt-4 pt-3 border-t border-gray-100 dark:border-gray-700">
        <%= link_to payments_path, class: "text-xs text-brand-600 dark:text-brand-400 hover:text-brand-700 dark:hover:text-brand-300 font-medium" do %>
          View All &rsaquo;
        <% end %>
      </div>
    </div>

    <%# ===== CARD 6: Buckets ===== %>
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6 flex flex-col">
      <h2 class="text-sm font-semibold text-gray-800 dark:text-gray-200 mb-4">Buckets</h2>
      <div class="flex-1 flex items-center justify-center">
        <p class="text-sm text-gray-400 dark:text-gray-500">No buckets yet.</p>
      </div>
      <div class="mt-4 pt-3 border-t border-gray-100 dark:border-gray-700">
        <a href="#" class="text-xs text-brand-600 dark:text-brand-400 hover:text-brand-700 dark:hover:text-brand-300 font-medium">Manage Buckets &rsaquo;</a>
      </div>
    </div>

  </div>
</div>
