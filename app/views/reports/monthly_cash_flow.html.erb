<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8"
     data-controller="monthly-cash-flow"
     data-monthly-cash-flow-api-url-value="<%= api_reports_monthly_cash_flow_path %>"
     data-monthly-cash-flow-year-value="<%= @open_month.current_year %>"
     data-monthly-cash-flow-month-value="<%= @open_month.current_month %>"
     data-monthly-cash-flow-month-label-value="<%= Date.new(@open_month.current_year, @open_month.current_month, 1).strftime('%B %Y') %>">

  <%# Report Options Modal %>
  <div data-monthly-cash-flow-target="optionsModal"
       class="fixed inset-0 z-50 overflow-y-auto">
    <div class="flex min-h-full items-center justify-center p-4">
      <div class="fixed inset-0 bg-black/50 transition-opacity"></div>
      <div class="relative bg-white dark:bg-gray-800 rounded-xl shadow-2xl w-full max-w-md p-6 ring-1 ring-gray-200 dark:ring-gray-700">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-1">Monthly Cash Flow</h3>
        <p class="text-sm text-gray-500 dark:text-gray-400 mb-5">Choose how you want to run this report.</p>

        <%# Report Type Radio Buttons %>
        <div class="space-y-3 mb-5">
          <label class="flex items-center space-x-3 cursor-pointer group">
            <input type="radio" name="report_type" value="regular" checked
                   class="h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300 dark:border-gray-600"
                   data-action="change->monthly-cash-flow#onTypeChange"
                   data-monthly-cash-flow-target="typeRegular">
            <span class="text-sm font-medium text-gray-900 dark:text-white group-hover:text-brand-600 dark:group-hover:text-brand-400">Regular (This Month)</span>
          </label>
          <label class="flex items-center space-x-3 cursor-pointer group">
            <input type="radio" name="report_type" value="comparison"
                   class="h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300 dark:border-gray-600"
                   data-action="change->monthly-cash-flow#onTypeChange"
                   data-monthly-cash-flow-target="typeComparison">
            <span class="text-sm font-medium text-gray-900 dark:text-white group-hover:text-brand-600 dark:group-hover:text-brand-400">Comparison</span>
          </label>
        </div>

        <%# Comparison Options (hidden by default) %>
        <div data-monthly-cash-flow-target="comparisonOptions" class="hidden mb-5 ml-7 space-y-3 border-l-2 border-brand-200 dark:border-brand-700 pl-4">
          <label class="flex items-center space-x-3 cursor-pointer">
            <input type="checkbox" checked
                   class="h-4 w-4 rounded text-brand-600 focus:ring-brand-500 border-gray-300 dark:border-gray-600"
                   data-monthly-cash-flow-target="comparePrev">
            <span class="text-sm text-gray-700 dark:text-gray-300">Compare to Previous Month</span>
          </label>
          <label class="flex items-center space-x-3 cursor-pointer">
            <input type="checkbox"
                   class="h-4 w-4 rounded text-brand-600 focus:ring-brand-500 border-gray-300 dark:border-gray-600"
                   data-monthly-cash-flow-target="includeYtd">
            <span class="text-sm text-gray-700 dark:text-gray-300">Include YTD Totals</span>
          </label>
          <div data-monthly-cash-flow-target="comparisonError" class="hidden text-sm text-red-600 dark:text-red-400">
            Please select at least one comparison option.
          </div>
        </div>

        <%# Month Context %>
        <div class="mb-5 px-3 py-2 rounded-lg bg-gray-50 dark:bg-gray-700/50 ring-1 ring-gray-200 dark:ring-gray-600">
          <span class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Open Month</span>
          <p class="text-sm font-semibold text-gray-900 dark:text-white mt-0.5">
            <%= Date.new(@open_month.current_year, @open_month.current_month, 1).strftime("%B %Y") %>
          </p>
        </div>

        <%# Actions %>
        <div class="flex justify-end space-x-3">
          <%= link_to "Cancel", reports_path,
              class: "px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600 rounded-lg transition" %>
          <button type="button"
                  class="px-4 py-2 text-sm font-medium text-white bg-brand-600 hover:bg-brand-700 rounded-lg transition"
                  data-action="click->monthly-cash-flow#runReport">
            Run Report
          </button>
        </div>
      </div>
    </div>
  </div>

  <%# Page Header %>
  <div class="mb-6" data-monthly-cash-flow-target="reportContent" style="display:none">
    <div class="flex items-center space-x-2 mb-4">
      <%= link_to reports_path, class: "text-sm text-brand-600 dark:text-brand-400 hover:underline flex items-center" do %>
        <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"/>
        </svg>
        Back to Reports
      <% end %>
    </div>
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
      <div>
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Monthly Cash Flow</h1>
        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
          <span data-monthly-cash-flow-target="monthLabel">Loading...</span>
          <span data-monthly-cash-flow-target="modeLabel" class="ml-2 inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-brand-100 text-brand-700 dark:bg-brand-900/30 dark:text-brand-300"></span>
        </p>
      </div>
      <button type="button"
              class="inline-flex items-center px-3 py-1.5 text-sm font-medium text-brand-600 dark:text-brand-400 hover:bg-brand-50 dark:hover:bg-brand-900/20 rounded-lg transition"
              data-action="click->monthly-cash-flow#showOptions">
        <svg class="h-4 w-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.066 2.573c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.573 1.066c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.066-2.573c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
        Change Options
      </button>
    </div>
  </div>

  <%# Summary Table %>
  <div data-monthly-cash-flow-target="reportContent" style="display:none"
       class="bg-white dark:bg-gray-800 shadow-sm rounded-lg overflow-hidden ring-1 ring-gray-200 dark:ring-gray-700">
    <div class="overflow-x-auto">
      <table class="min-w-full">
        <thead class="bg-gray-50 dark:bg-gray-900" data-monthly-cash-flow-target="summaryHead">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Item</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Amount</th>
          </tr>
        </thead>
        <tbody data-monthly-cash-flow-target="summaryBody">
          <tr><td colspan="2" class="px-6 py-8 text-center text-sm text-gray-400 dark:text-gray-500">Loading...</td></tr>
        </tbody>
      </table>
    </div>
  </div>

  <%# Expandable Details %>
  <div data-monthly-cash-flow-target="reportContent" style="display:none"
       class="mt-6 space-y-4">
    <div data-monthly-cash-flow-target="detailsSection"></div>
  </div>
</div>
