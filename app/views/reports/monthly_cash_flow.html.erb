<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8"
     data-controller="monthly-cash-flow"
     data-monthly-cash-flow-api-url-value="<%= api_reports_monthly_cash_flow_path %>"
     data-monthly-cash-flow-year-value="<%= @open_month.current_year %>"
     data-monthly-cash-flow-month-value="<%= @open_month.current_month %>">

  <%# Page Header %>
  <div class="mb-6">
    <div class="flex items-center space-x-2 mb-4">
      <%= link_to reports_path, class: "text-sm text-brand-600 dark:text-brand-400 hover:underline flex items-center" do %>
        <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"/>
        </svg>
        Back to Reports
      <% end %>
    </div>
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
      <div>
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Monthly Cash Flow</h1>
        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Summary of monthly inflows and outflows with net cash position</p>
      </div>
      <%# Month Navigation %>
      <div class="flex items-center space-x-3">
        <button type="button"
                class="p-1.5 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 text-gray-500 dark:text-gray-400 transition"
                data-action="click->monthly-cash-flow#prevMonth"
                title="Previous month">
          <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"/>
          </svg>
        </button>
        <span class="text-sm font-semibold text-gray-700 dark:text-gray-300 min-w-[120px] text-center"
              data-monthly-cash-flow-target="monthLabel">Loading...</span>
        <button type="button"
                class="p-1.5 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 text-gray-500 dark:text-gray-400 transition"
                data-action="click->monthly-cash-flow#nextMonth"
                title="Next month">
          <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <%# Summary Table %>
  <div class="bg-white dark:bg-gray-800 shadow-sm rounded-lg overflow-hidden ring-1 ring-gray-200 dark:ring-gray-700">
    <table class="min-w-full">
      <thead class="bg-gray-50 dark:bg-gray-900">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Item</th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Amount</th>
        </tr>
      </thead>
      <tbody data-monthly-cash-flow-target="summaryBody">
        <tr><td colspan="2" class="px-6 py-8 text-center text-sm text-gray-400 dark:text-gray-500">Loading...</td></tr>
      </tbody>
    </table>
  </div>

  <%# Expandable Details %>
  <div class="mt-6 space-y-4" data-monthly-cash-flow-target="detailsSection">
  </div>
</div>
