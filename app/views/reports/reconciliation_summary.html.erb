<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8"
     data-controller="reconciliation-summary"
     data-reconciliation-summary-api-url-value="<%= api_reports_reconciliation_summary_path %>"
     data-reconciliation-summary-accounts-url-value="<%= api_accounts_path %>"
     data-reconciliation-summary-year-value="<%= @open_month.current_year %>"
     data-reconciliation-summary-month-value="<%= @open_month.current_month %>">

  <%# Report Options Modal %>
  <div data-reconciliation-summary-target="optionsModal"
       class="fixed inset-0 z-50 overflow-y-auto">
    <div class="flex min-h-full items-center justify-center p-4">
      <div class="fixed inset-0 bg-black/50 transition-opacity"></div>
      <div class="relative bg-white dark:bg-gray-800 rounded-xl shadow-2xl w-full max-w-md p-6 ring-1 ring-gray-200 dark:ring-gray-700">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-1">Reconciliation Report</h3>
        <p class="text-sm text-gray-500 dark:text-gray-400 mb-5">Choose an account and month.</p>

        <%# Account Selector %>
        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Account</label>
          <select data-reconciliation-summary-target="accountSelect"
                  class="w-full rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-sm text-gray-900 dark:text-white px-3 py-2 focus:ring-brand-500 focus:border-brand-500">
            <option value="">Select an account...</option>
          </select>
        </div>

        <%# Month Selector %>
        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Month</label>
          <div class="flex gap-2">
            <select data-reconciliation-summary-target="monthSelect"
                    class="flex-1 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-sm text-gray-900 dark:text-white px-3 py-2 focus:ring-brand-500 focus:border-brand-500">
            </select>
            <select data-reconciliation-summary-target="yearSelect"
                    class="w-24 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-sm text-gray-900 dark:text-white px-3 py-2 focus:ring-brand-500 focus:border-brand-500">
            </select>
          </div>
        </div>

        <%# Toggles %>
        <div class="mb-4 space-y-3">
          <label class="flex items-center space-x-3 cursor-pointer">
            <input type="checkbox" checked
                   class="h-4 w-4 rounded text-brand-600 focus:ring-brand-500 border-gray-300 dark:border-gray-600"
                   data-reconciliation-summary-target="includeUnreconciled">
            <span class="text-sm text-gray-700 dark:text-gray-300">Include Unreconciled Transactions</span>
          </label>
          <label class="flex items-center space-x-3 cursor-pointer">
            <input type="checkbox"
                   class="h-4 w-4 rounded text-brand-600 focus:ring-brand-500 border-gray-300 dark:border-gray-600"
                   data-reconciliation-summary-target="summaryOnly">
            <span class="text-sm text-gray-700 dark:text-gray-300">Summary Only (hide transactions)</span>
          </label>
        </div>

        <%# Validation Error %>
        <div data-reconciliation-summary-target="optionsError" class="hidden mb-4 text-sm text-red-600 dark:text-red-400"></div>

        <%# Actions %>
        <div class="flex justify-end space-x-3">
          <%= link_to "Cancel", reports_path,
              class: "px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600 rounded-lg transition" %>
          <button type="button"
                  class="px-4 py-2 text-sm font-medium text-white bg-brand-600 hover:bg-brand-700 rounded-lg transition"
                  data-action="click->reconciliation-summary#runReport">
            Run Report
          </button>
        </div>
      </div>
    </div>
  </div>

  <%# Page Header %>
  <div class="mb-6" data-reconciliation-summary-target="reportContent" style="display:none">
    <div class="flex items-center space-x-2 mb-4">
      <%= link_to reports_path, class: "text-sm text-brand-600 dark:text-brand-400 hover:underline flex items-center" do %>
        <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"/>
        </svg>
        Back to Reports
      <% end %>
    </div>
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
      <div>
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Reconciliation Report</h1>
        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
          <span data-reconciliation-summary-target="reportSubtitle">Loading...</span>
        </p>
      </div>
      <div class="flex items-center space-x-2">
        <button type="button"
                class="inline-flex items-center px-3 py-1.5 text-sm font-medium text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition"
                data-action="click->reconciliation-summary#printReport">
          <svg class="h-4 w-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"/>
          </svg>
          Print
        </button>
        <button type="button"
                class="inline-flex items-center px-3 py-1.5 text-sm font-medium text-brand-600 dark:text-brand-400 hover:bg-brand-50 dark:hover:bg-brand-900/20 rounded-lg transition"
                data-action="click->reconciliation-summary#showOptions">
          <svg class="h-4 w-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.066 2.573c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.573 1.066c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.066-2.573c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.11 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          Change Options
        </button>
      </div>
    </div>
  </div>

  <%# Report Body %>
  <div data-reconciliation-summary-target="reportContent" style="display:none">
    <div data-reconciliation-summary-target="reportBody" class="space-y-6"></div>
  </div>
</div>
