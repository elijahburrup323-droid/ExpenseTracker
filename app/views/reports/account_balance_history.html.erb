<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8"
     data-controller="account-balance-history"
     data-account-balance-history-api-url-value="<%= api_reports_account_balance_history_path %>"
     data-account-balance-history-accounts-url-value="<%= api_accounts_path %>"
     data-account-balance-history-year-value="<%= @open_month.current_year %>"
     data-account-balance-history-month-value="<%= @open_month.current_month %>">

  <%# Report Options Modal %>
  <div data-account-balance-history-target="optionsModal"
       class="fixed inset-0 z-50 overflow-y-auto">
    <div class="flex min-h-full items-center justify-center p-4">
      <div class="fixed inset-0 bg-black/50 transition-opacity"></div>
      <div class="relative bg-white dark:bg-gray-800 rounded-xl shadow-2xl w-full max-w-md p-6 ring-1 ring-gray-200 dark:ring-gray-700">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-1">Account Balance History</h3>
        <p class="text-sm text-gray-500 dark:text-gray-400 mb-5">Choose options for this report.</p>

        <%# Account Selection %>
        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Account</label>
          <select data-account-balance-history-target="accountSelect"
                  class="w-full rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-sm text-gray-900 dark:text-white px-3 py-2 focus:ring-brand-500 focus:border-brand-500">
            <option value="">All Accounts</option>
          </select>
        </div>

        <%# Date Range %>
        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Date Range</label>
          <div class="grid grid-cols-2 gap-3">
            <div>
              <span class="block text-xs text-gray-500 dark:text-gray-400 mb-1">Start</span>
              <div class="flex gap-1">
                <select data-account-balance-history-target="startMonthSelect"
                        class="flex-1 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-sm text-gray-900 dark:text-white px-2 py-2 focus:ring-brand-500 focus:border-brand-500">
                </select>
                <select data-account-balance-history-target="startYearSelect"
                        class="w-20 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-sm text-gray-900 dark:text-white px-2 py-2 focus:ring-brand-500 focus:border-brand-500">
                </select>
              </div>
            </div>
            <div>
              <span class="block text-xs text-gray-500 dark:text-gray-400 mb-1">End</span>
              <div class="flex gap-1">
                <select data-account-balance-history-target="endMonthSelect"
                        class="flex-1 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-sm text-gray-900 dark:text-white px-2 py-2 focus:ring-brand-500 focus:border-brand-500">
                </select>
                <select data-account-balance-history-target="endYearSelect"
                        class="w-20 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-sm text-gray-900 dark:text-white px-2 py-2 focus:ring-brand-500 focus:border-brand-500">
                </select>
              </div>
            </div>
          </div>
        </div>

        <%# Output Format %>
        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Output Format</label>
          <div class="space-y-2">
            <label class="flex items-center space-x-3 cursor-pointer group">
              <input type="radio" name="output_format" value="table" checked
                     class="h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300 dark:border-gray-600"
                     data-account-balance-history-target="formatTable">
              <span class="text-sm text-gray-900 dark:text-white group-hover:text-brand-600 dark:group-hover:text-brand-400">Table View</span>
            </label>
            <label class="flex items-center space-x-3 cursor-pointer group">
              <input type="radio" name="output_format" value="chart"
                     class="h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300 dark:border-gray-600"
                     data-account-balance-history-target="formatChart">
              <span class="text-sm text-gray-900 dark:text-white group-hover:text-brand-600 dark:group-hover:text-brand-400">Chart View</span>
            </label>
          </div>
        </div>

        <%# Closed Months Only %>
        <div class="mb-5">
          <label class="flex items-center space-x-3 cursor-pointer">
            <input type="checkbox"
                   class="h-4 w-4 rounded text-brand-600 focus:ring-brand-500 border-gray-300 dark:border-gray-600"
                   data-account-balance-history-target="closedOnlyCheckbox">
            <span class="text-sm text-gray-700 dark:text-gray-300">Include Closed Months Only</span>
          </label>
        </div>

        <%# Validation Error %>
        <div data-account-balance-history-target="optionsError" class="hidden mb-4 text-sm text-red-600 dark:text-red-400"></div>

        <%# Actions %>
        <div class="flex justify-end space-x-3">
          <%= link_to "Cancel", reports_path,
              class: "px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600 rounded-lg transition" %>
          <button type="button"
                  class="px-4 py-2 text-sm font-medium text-white bg-brand-600 hover:bg-brand-700 rounded-lg transition"
                  data-action="click->account-balance-history#runReport">
            Run Report
          </button>
        </div>
      </div>
    </div>
  </div>

  <%# Page Header %>
  <div class="mb-6" data-account-balance-history-target="reportContent" style="display:none">
    <div class="flex items-center space-x-2 mb-4">
      <%= link_to reports_path, class: "text-sm text-brand-600 dark:text-brand-400 hover:underline flex items-center" do %>
        <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"/>
        </svg>
        Back to Reports
      <% end %>
    </div>
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
      <div>
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Account Balance History</h1>
        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
          <span data-account-balance-history-target="reportSubtitle">Loading...</span>
        </p>
      </div>
      <div class="flex items-center space-x-2">
        <button type="button"
                class="inline-flex items-center px-3 py-1.5 text-sm font-medium text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition"
                data-action="click->account-balance-history#printReport">
          <svg class="h-4 w-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"/>
          </svg>
          Print
        </button>
        <button type="button"
                class="inline-flex items-center px-3 py-1.5 text-sm font-medium text-brand-600 dark:text-brand-400 hover:bg-brand-50 dark:hover:bg-brand-900/20 rounded-lg transition"
                data-action="click->account-balance-history#showOptions">
          <svg class="h-4 w-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.066 2.573c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.573 1.066c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.066-2.573c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          Change Options
        </button>
      </div>
    </div>
  </div>

  <%# Summary Stats %>
  <div data-account-balance-history-target="reportContent" style="display:none" class="mb-4 grid grid-cols-3 gap-4">
    <div data-account-balance-history-target="statBeginning"
         class="bg-white dark:bg-gray-800 rounded-lg shadow-sm ring-1 ring-gray-200 dark:ring-gray-700 px-5 py-4"></div>
    <div data-account-balance-history-target="statEnding"
         class="bg-white dark:bg-gray-800 rounded-lg shadow-sm ring-1 ring-gray-200 dark:ring-gray-700 px-5 py-4"></div>
    <div data-account-balance-history-target="statChange"
         class="bg-white dark:bg-gray-800 rounded-lg shadow-sm ring-1 ring-gray-200 dark:ring-gray-700 px-5 py-4"></div>
  </div>

  <%# Table Container %>
  <div data-account-balance-history-target="reportContent" style="display:none">
    <div data-account-balance-history-target="tableContainer"
         class="bg-white dark:bg-gray-800 shadow-sm rounded-lg overflow-hidden ring-1 ring-gray-200 dark:ring-gray-700">
      <div class="overflow-x-auto">
        <table class="min-w-full">
          <thead class="bg-gray-50 dark:bg-gray-900" data-account-balance-history-target="tableHead">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Month</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Beginning Balance</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Ending Balance</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Change</th>
            </tr>
          </thead>
          <tbody data-account-balance-history-target="tableBody">
            <tr><td colspan="4" class="px-6 py-8 text-center text-sm text-gray-400 dark:text-gray-500">Loading...</td></tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <%# Chart Container %>
  <div data-account-balance-history-target="reportContent" style="display:none">
    <div data-account-balance-history-target="chartContainer"
         class="hidden bg-white dark:bg-gray-800 shadow-sm rounded-lg overflow-hidden ring-1 ring-gray-200 dark:ring-gray-700 p-6">
    </div>
  </div>
</div>
