<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8" data-controller="legal-toc">
  <%# Header %>
  <div class="mb-6">
    <div class="flex items-center space-x-2 text-sm text-gray-500 dark:text-gray-400 mb-2">
      <%= link_to root_path, class: "hover:text-brand-600 dark:hover:text-brand-400 transition" do %>Home<% end %>
      <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/></svg>
      <span class="text-gray-900 dark:text-white font-medium"><%= @page.title %></span>
    </div>
    <h1 class="text-2xl font-bold text-gray-900 dark:text-white"><%= @page.title %></h1>
    <% if @page.published_at.present? %>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Last updated: <%= @page.published_at.strftime("%B %-d, %Y") %></p>
    <% end %>
  </div>

  <%# Two-column layout: TOC + Content %>
  <div class="flex gap-8">
    <%# Left sidebar â€” Table of Contents %>
    <aside class="hidden lg:block w-56 flex-shrink-0">
      <div class="sticky top-20">
        <h3 class="text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-3 px-4">On this page</h3>
        <nav data-legal-toc-target="toc" class="space-y-0.5">
          <%# TOC links populated dynamically by Stimulus controller %>
        </nav>
      </div>
    </aside>

    <%# Right content area %>
    <div class="flex-1 min-w-0" data-legal-toc-target="content">
      <%= @page.content.html_safe %>
    </div>
  </div>
</div>
