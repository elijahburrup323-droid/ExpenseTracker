<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8"
     data-controller="buckets"
     data-buckets-api-url-value="<%= api_buckets_path %>"
     data-buckets-accounts-url-value="<%= api_accounts_path %>"
     data-buckets-csrf-token-value="<%= form_authenticity_token %>">

  <%# Page Header (sticky) %>
  <div class="sticky top-14 z-20 bg-gray-50 dark:bg-gray-900 -mx-4 sm:-mx-6 lg:-mx-8 px-4 sm:px-6 lg:px-8 py-4 mb-2 border-b border-gray-200 dark:border-gray-700 shadow-sm">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
    <div>
      <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Buckets</h1>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Allocate money within your accounts for specific purposes</p>
    </div>
    <div class="flex items-center space-x-2">
      <%# Account Filter %>
      <select class="rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm text-sm focus:border-brand-500 focus:ring-brand-500 px-3 py-2"
              data-buckets-target="accountFilter"
              data-action="change->buckets#filterByAccount">
        <option value="">All Accounts</option>
      </select>
      <button type="button"
              class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition disabled:opacity-50 disabled:cursor-not-allowed"
              data-buckets-target="addButton"
              data-action="click->buckets#startAdding">
        <svg class="h-4 w-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/>
        </svg>
        Add Bucket
      </button>
    </div>
    </div>
  </div>

  <%# Table %>
  <div class="bg-white dark:bg-gray-800 shadow-sm rounded-lg overflow-hidden ring-1 ring-gray-200 dark:ring-gray-700">
    <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
      <thead class="bg-gray-50 dark:bg-gray-800" data-buckets-target="tableHead">
        <tr>
          <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider cursor-pointer hover:text-gray-700 dark:hover:text-gray-200 transition select-none" data-sort-field="account_name" data-action="click->buckets#toggleSort">
            <span class="inline-flex items-center space-x-1"><span>Account</span><span data-sort-icon="account_name" class="text-gray-300 dark:text-gray-600"></span></span>
          </th>
          <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider cursor-pointer hover:text-gray-700 dark:hover:text-gray-200 transition select-none" data-sort-field="name" data-action="click->buckets#toggleSort">
            <span class="inline-flex items-center space-x-1"><span>Bucket Name</span><span data-sort-icon="name" class="text-gray-300 dark:text-gray-600"></span></span>
          </th>
          <th scope="col" class="px-4 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider cursor-pointer hover:text-gray-700 dark:hover:text-gray-200 transition select-none" data-sort-field="current_balance" data-action="click->buckets#toggleSort">
            <span class="inline-flex items-center justify-end space-x-1"><span>Balance</span><span data-sort-icon="current_balance" class="text-gray-300 dark:text-gray-600"></span></span>
          </th>
          <th scope="col" class="px-4 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider cursor-pointer hover:text-gray-700 dark:hover:text-gray-200 transition select-none" data-sort-field="target_amount" data-action="click->buckets#toggleSort">
            <span class="inline-flex items-center justify-end space-x-1"><span>Target</span><span data-sort-icon="target_amount" class="text-gray-300 dark:text-gray-600"></span></span>
          </th>
          <th scope="col" class="px-4 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider w-16 cursor-pointer hover:text-gray-700 dark:hover:text-gray-200 transition select-none" data-sort-field="is_active" data-action="click->buckets#toggleSort">
            <span class="inline-flex items-center justify-center space-x-1"><span>Active</span><span data-sort-icon="is_active" class="text-gray-300 dark:text-gray-600"></span></span>
          </th>
          <th scope="col" class="px-4 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider w-36">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700" data-buckets-target="tableBody">
        <tr>
          <td colspan="6" class="px-4 py-8 text-center text-sm text-gray-400 dark:text-gray-500">Loading...</td>
        </tr>
      </tbody>
    </table>
  </div>

  <%# Info Box %>
  <div class="mt-6 rounded-lg bg-blue-50 dark:bg-blue-900/30 p-4 ring-1 ring-blue-200 dark:ring-blue-800">
    <div class="flex">
      <svg class="h-5 w-5 text-blue-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
      </svg>
      <p class="ml-3 text-sm text-blue-700 dark:text-blue-300">
        Buckets let you earmark money within an account for specific purposes (e.g., "Vacation", "Emergency Fund").
        Each bucket-enabled account has a Default bucket that catches unassigned funds.
        Use "Fund" to move money between buckets within the same account.
      </p>
    </div>
  </div>

  <%# Add / Edit Bucket Modal %>
  <div class="hidden fixed inset-0 z-50" data-buckets-target="entryModal">
    <div class="fixed inset-0 bg-gray-500/75 dark:bg-gray-900/80 transition-opacity"></div>
    <div class="fixed inset-0 z-50 flex items-center justify-center p-4">
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-lg w-full p-6">
        <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4" data-buckets-target="modalTitle">Add Bucket</h3>

        <div class="space-y-4">
          <%# Account %>
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Account <span class="text-red-500">*</span></label>
            <select class="w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm text-sm focus:border-brand-500 focus:ring-brand-500 px-3 py-2"
                    data-buckets-target="modalAccount">
              <option value="">Select account...</option>
            </select>
          </div>

          <%# Name %>
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Name <span class="text-red-500">*</span></label>
            <input type="text" maxlength="80" placeholder="e.g. Vacation Fund"
                   class="w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm text-sm focus:border-brand-500 focus:ring-brand-500 px-3 py-2"
                   data-buckets-target="modalName"
                   data-action="keydown->buckets#handleKeydown">
          </div>

          <%# Target Amount %>
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Target Amount <span class="text-xs text-gray-400">(optional)</span></label>
            <div class="relative">
              <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-500 dark:text-gray-400 text-sm">$</span>
              <input type="number" step="0.01" placeholder="0.00"
                     class="w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm text-sm focus:border-brand-500 focus:ring-brand-500 pl-7 pr-3 py-2 text-right"
                     data-buckets-target="modalTargetAmt"
                     data-action="keydown->buckets#handleKeydown">
            </div>
          </div>

          <%# Initial Balance (only for add) %>
          <div data-buckets-target="modalBalanceRow">
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Initial Balance</label>
            <div class="relative">
              <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-500 dark:text-gray-400 text-sm">$</span>
              <input type="number" step="0.01" placeholder="0.00"
                     class="w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm text-sm focus:border-brand-500 focus:ring-brand-500 pl-7 pr-3 py-2 text-right"
                     data-buckets-target="modalBalance"
                     data-action="keydown->buckets#handleKeydown">
            </div>
          </div>

          <%# Priority %>
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Priority</label>
            <input type="number" step="1" placeholder="0" min="0"
                   class="w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm text-sm focus:border-brand-500 focus:ring-brand-500 px-3 py-2"
                   data-buckets-target="modalPriority"
                   data-action="keydown->buckets#handleKeydown">
          </div>

          <%# Error Display %>
          <div class="hidden rounded-md bg-red-50 dark:bg-red-900/30 p-3" data-buckets-target="modalError">
            <p class="text-sm text-red-600 dark:text-red-400"></p>
          </div>
        </div>

        <%# Footer Buttons %>
        <div class="mt-6 flex justify-end space-x-3">
          <button type="button"
                  class="px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-brand-500 transition"
                  data-action="click->buckets#cancelModal">
            Cancel
          </button>
          <button type="button"
                  class="px-4 py-2 text-sm font-medium text-white bg-green-600 border border-transparent rounded-lg hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition"
                  data-action="click->buckets#saveModal">
            Save
          </button>
        </div>
      </div>
    </div>
  </div>

  <%# Fund / Move Money Modal %>
  <div class="hidden fixed inset-0 z-50" data-buckets-target="fundModal">
    <div class="fixed inset-0 bg-gray-500/75 dark:bg-gray-900/80 transition-opacity"></div>
    <div class="fixed inset-0 z-50 flex items-center justify-center p-4">
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-lg w-full p-6">
        <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Move Money Between Buckets</h3>

        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">From Bucket <span class="text-red-500">*</span></label>
            <select class="w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm text-sm focus:border-brand-500 focus:ring-brand-500 px-3 py-2"
                    data-buckets-target="fundFrom">
            </select>
            <p class="mt-1 text-xs text-gray-400 dark:text-gray-500" data-buckets-target="fundFromBalance"></p>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">To Bucket</label>
            <p class="text-sm font-medium text-gray-900 dark:text-white" data-buckets-target="fundToName"></p>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Amount <span class="text-red-500">*</span></label>
            <div class="relative">
              <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-500 dark:text-gray-400 text-sm">$</span>
              <input type="number" step="0.01" placeholder="0.00"
                     class="w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm text-sm focus:border-brand-500 focus:ring-brand-500 pl-7 pr-3 py-2 text-right"
                     data-buckets-target="fundAmount"
                     data-action="keydown->buckets#handleFundKeydown">
            </div>
          </div>
          <div class="hidden rounded-md bg-red-50 dark:bg-red-900/30 p-3" data-buckets-target="fundError">
            <p class="text-sm text-red-600 dark:text-red-400"></p>
          </div>
        </div>

        <div class="mt-6 flex justify-end space-x-3">
          <button type="button"
                  class="px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition"
                  data-action="click->buckets#cancelFund">
            Cancel
          </button>
          <button type="button"
                  class="px-4 py-2 text-sm font-medium text-white bg-brand-600 border border-transparent rounded-lg hover:bg-brand-700 transition"
                  data-action="click->buckets#executeFund">
            Move Money
          </button>
        </div>
      </div>
    </div>
  </div>

  <%# Delete Confirmation Modal %>
  <div class="hidden fixed inset-0 z-50" data-buckets-target="deleteModal">
    <div class="fixed inset-0 bg-gray-500/75 dark:bg-gray-900/80 transition-opacity"></div>
    <div class="fixed inset-0 z-50 flex items-center justify-center p-4">
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-md w-full p-6">
        <div class="flex items-start">
          <div class="flex-shrink-0 flex items-center justify-center h-10 w-10 rounded-full bg-red-100 dark:bg-red-900/30">
            <svg class="h-5 w-5 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"/>
            </svg>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-medium text-gray-900 dark:text-white">Delete Bucket</h3>
            <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
              Are you sure you want to delete "<span class="font-medium text-gray-700 dark:text-gray-300" data-buckets-target="deleteModalName"></span>"?
              Any remaining balance will be transferred to the default bucket.
            </p>
          </div>
        </div>
        <div class="mt-6 flex justify-end space-x-3">
          <button type="button"
                  class="px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-brand-500 transition"
                  data-action="click->buckets#cancelDelete">
            Cancel
          </button>
          <button type="button"
                  class="px-4 py-2 text-sm font-medium text-white bg-red-600 border border-transparent rounded-lg hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition"
                  data-action="click->buckets#executeDelete">
            Delete
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
